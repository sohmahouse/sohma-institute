---
import PortalLayout from '../../layouts/PortalLayout.astro'
import { categoryMeta, articles } from '../../data/articles'

export function getStaticPaths() {
  return categoryMeta.map(meta => ({
    params: { slug: meta.slug },
    props: { meta },
  }))
}

const { meta } = Astro.props
const categoryArticles = articles.filter(a => a.category === meta.name)
---

<PortalLayout
  title={`${meta.name} â€” Sohma Institute`}
  description={meta.description}
>
  <div class="cat-page">
    <div class="cat-page-inner">

      <nav class="cat-breadcrumb">
        <a href="/">Knowledge Base</a>
        <span aria-hidden="true">/</span>
        <span>{meta.name}</span>
      </nav>

      <header class="cat-header">
        <div class="cat-icon" aria-hidden="true">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d={meta.icon} />
          </svg>
        </div>
        <h1 class="cat-title">{meta.name}</h1>
        <p class="cat-description">{meta.description}</p>
        <span class="cat-count">{categoryArticles.length} {categoryArticles.length === 1 ? 'article' : 'articles'}</span>
      </header>

      <ol class="cat-listing">
        {categoryArticles.map(article => (
          <li>
            <a href={`/${article.slug}`} class="cat-entry">
              <div class="cat-entry-main">
                <h2 class="cat-entry-title">{article.title}</h2>
                <p class="cat-entry-subtitle">{article.subtitle}</p>
                <p class="cat-entry-summary">{article.summary}</p>
                <div class="cat-entry-meta">
                  <span class="cat-entry-author">{article.author}</span>
                  <span class="cat-entry-role">{article.authorRole}</span>
                </div>
              </div>
              {article.readingTime && (
                <span class="cat-entry-time">{article.readingTime}</span>
              )}
            </a>
          </li>
        ))}
      </ol>

    </div>
  </div>
</PortalLayout>

<style>
  .cat-page {
    min-height: 100vh;
    padding: 2.5rem 2.5rem 2rem;
  }

  .cat-page-inner {
    max-width: 740px;
    margin: 0 auto;
  }

  /* Breadcrumb */
  .cat-breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'Manrope', sans-serif;
    font-size: 0.75rem;
    color: #a89e94;
    margin-bottom: 1.75rem;
  }

  .cat-breadcrumb a {
    color: #8a7e74;
    text-decoration: none;
    transition: color 0.15s;
  }

  .cat-breadcrumb a:hover {
    color: #c45a42;
  }

  .cat-breadcrumb span:last-child {
    color: #6b5e52;
    font-weight: 600;
  }

  /* Header */
  .cat-header {
    padding-bottom: 1.75rem;
    margin-bottom: 0.25rem;
    border-bottom: 1px solid #d6d0ca;
  }

  .cat-icon {
    color: #c45a42;
    margin-bottom: 0.75rem;
    opacity: 0.85;
  }

  .cat-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2rem;
    font-weight: 600;
    color: #2c2520;
    line-height: 1.2;
    margin: 0 0 0.5rem;
    letter-spacing: -0.01em;
  }

  .cat-description {
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    color: #6b5e52;
    line-height: 1.6;
    margin: 0 0 0.75rem;
    max-width: 540px;
  }

  .cat-count {
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #a89e94;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  /* Article listing */
  .cat-listing {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .cat-listing li {
    border-bottom: 1px solid #ece9e5;
  }

  .cat-listing li:last-child {
    border-bottom: none;
  }

  .cat-entry {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.25rem 0.75rem;
    margin: 0 -0.75rem;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.15s;
  }

  .cat-entry:hover {
    background: rgba(196, 90, 66, 0.03);
  }

  .cat-entry-main {
    flex: 1;
    min-width: 0;
  }

  .cat-entry-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.3125rem;
    font-weight: 600;
    color: #2c2520;
    line-height: 1.3;
    margin: 0 0 0.2rem;
    transition: color 0.15s;
  }

  .cat-entry:hover .cat-entry-title {
    color: #c45a42;
  }

  .cat-entry-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    font-style: italic;
    color: #8a7e74;
    line-height: 1.45;
    margin: 0 0 0.5rem;
  }

  .cat-entry-summary {
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    color: #7a6e63;
    line-height: 1.55;
    margin: 0 0 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .cat-entry-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cat-entry-author {
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #6b5e52;
  }

  .cat-entry-role {
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    color: #a89e94;
  }

  .cat-entry-role::before {
    content: '\2014\00a0';
  }

  .cat-entry-time {
    flex-shrink: 0;
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    color: #b8afa7;
    white-space: nowrap;
    padding-top: 0.125rem;
  }

  @media (max-width: 640px) {
    .cat-page {
      padding: 2rem 1.25rem 1.5rem;
    }

    .cat-title {
      font-size: 1.625rem;
    }

    .cat-entry {
      flex-direction: column;
      gap: 0.25rem;
    }

    .cat-entry-title {
      font-size: 1.125rem;
    }
  }
</style>
