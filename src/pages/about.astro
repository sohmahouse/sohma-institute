  }
  function onMouseLeave() { hoveredNode = -1 }
  wrap.addEventListener('mousemove', onMouseMove)
  wrap.addEventListener('mouseleave', onMouseLeave)

  /* ── Is flow connected to node? ── */
  function flowConnected(flowIdx, nodeIdx) {
    return FLOWS[flowIdx][0] === nodeIdx || FLOWS[flowIdx][1] === nodeIdx
  }

  /* ── Draw ── */
  function tick() {
    if (!visible) { animId = 0; return }
    animId = requestAnimationFrame(tick)
    time += 0.016

    ctx.clearRect(0, 0, W, H)

    if (reducedMotion) {
      drawNodesStatic()
      return
    }

    // Draw flow paths (faint)
    for (let fi = 0; fi < FLOWS.length; fi++) {
      if (!activeFlows[fi]) continue
      const path = getFlowPath(fi)
