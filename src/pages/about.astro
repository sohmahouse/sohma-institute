    resizeTimer = window.setTimeout(resize, 200)
  }
  window.addEventListener('resize', debouncedResize)
  resize()

  /* ── Bezier path helper ── */
  function getFlowPath(flowIdx) {
    const flow = FLOWS[flowIdx]
    const from = NODES[flow[0]]
    const to = NODES[flow[1]]
    const fx = from.x * W, fy = from.y * H
    const tx = to.x * W, ty = to.y * H

    // Perpendicular offset for bidirectional edges (flows 0 & 1 share left edge)
    let offX = 0, offY = 0
    if (flowIdx === 0 || flowIdx === 1) {
      const dx = tx - fx, dy = ty - fy
      const len = Math.sqrt(dx * dx + dy * dy) || 1
      const nx = -dy / len, ny = dx / len
      const sign = flowIdx === 0 ? 1 : -1
      offX = nx * 8 * sign
      offY = ny * 8 * sign
    }

    const mx = (fx + tx) / 2 + offX
    const my = (fy + ty) / 2 + offY
    // Control point offset toward centre of triangle
    const cx = mx + (0.5 * W - mx) * 0.35
    const cy = my + (0.5 * H - my) * 0.35

    return { fx: fx + offX, fy: fy + offY, cx, cy, tx: tx + offX, ty: ty + offY }
  }

  /* ── Evaluate quadratic bezier at t ── */
  function bezierAt(path, t) {
    const mt = 1 - t
    return {
      x: mt * mt * path.fx + 2 * mt * t * path.cx + t * t * path.tx,
      y: mt * mt * path.fy + 2 * mt * t * path.cy + t * t * path.ty,
    }
  }

  /* ── Initialise particles ── */
  function initParticles() {
