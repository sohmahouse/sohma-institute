    '#d4704e', // Institute → House (warm terracotta)
    '#8fa87a', // Institute → Consulting (sage green)
    '#b994d4', // Consulting → House (soft purple)
  ]

  /* ── Node positions (ratios of canvas size) ── */
  const NODES = [
    { x: 0.50, y: 0.20, r: 32, label: 'institute' },
    { x: 0.25, y: 0.78, r: 24, label: 'house' },
    { x: 0.75, y: 0.78, r: 24, label: 'consulting' },
  ]

  /* ── Flow definitions: [fromNodeIdx, toNodeIdx, density, colorIdx] ── */
  const FLOWS = [
    [1, 0, 140, 0], // House → Institute
    [0, 1, 100, 1], // Institute → House
    [0, 2, 100, 2], // Institute → Consulting
    [2, 1, 70, 3],  // Consulting → House
