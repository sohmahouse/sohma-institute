;(function ecologyLoop() {
  const wrap = document.getElementById('ecology-wrap')
  const canvas = document.getElementById('ecology-canvas')
  if (!wrap || !canvas) return
  const ctx = canvas.getContext('2d')
  if (!ctx) return

  const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches

  /* ── Flow colours ── */
  const FLOW_COLORS = [
