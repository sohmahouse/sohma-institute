    for (let fi = 0; fi < FLOWS.length; fi++) {
      const count = FLOWS[fi][2]
      for (let i = 0; i < count; i++) {
        const base = idx * STRIDE
        pool[base] = Math.random()                       // progress
        pool[base + 1] = 0.001 + Math.random() * 0.002   // speed
        pool[base + 2] = fi                               // flow index
        pool[base + 3] = 1                                // active immediately
        pool[base + 4] = (Math.random() - 0.5) * 2       // jitter seed
        pool[base + 5] = Math.random() * Math.PI * 2     // sine phase
        idx++
