      if (hoveredNode >= 0) {
        alpha = flowConnected(fi, hoveredNode) ? 0.15 : 0.03
      }
      ctx.beginPath()
      ctx.moveTo(path.fx, path.fy)
      ctx.quadraticCurveTo(path.cx, path.cy, path.tx, path.ty)
      ctx.strokeStyle = FLOW_COLORS[FLOWS[fi][3]]
      ctx.globalAlpha = alpha
      ctx.lineWidth = 1
      ctx.stroke()
      ctx.globalAlpha = 1
    }

    // Update & draw particles
    for (let i = 0; i < MAX_PARTICLES; i++) {
      const base = i * STRIDE
      if (!pool[base + 3]) continue

      const fi = pool[base + 2]
      if (!activeFlows[fi]) continue

      // Advance
      pool[base] += pool[base + 1]
      if (pool[base] > 1) pool[base] -= 1

      const progress = pool[base]
      const path = getFlowPath(fi)
      const pos = bezierAt(path, progress)

      // Perpendicular jitter
      const jitter = Math.sin(progress * Math.PI * 4 + pool[base + 5]) * 3 * pool[base + 4]
      // Approximate tangent for perpendicular
      const tNext = Math.min(progress + 0.01, 1)
      const posNext = bezierAt(path, tNext)
      const tdx = posNext.x - pos.x, tdy = posNext.y - pos.y
      const tlen = Math.sqrt(tdx * tdx + tdy * tdy) || 1
      pos.x += (-tdy / tlen) * jitter
      pos.y += (tdx / tlen) * jitter

      let baseAlpha = 0.4 + pool[base + 4] * 0.15
      if (hoveredNode >= 0) {
        baseAlpha = flowConnected(fi, hoveredNode) ? 0.7 : 0.1
      }

      const color = FLOW_COLORS[FLOWS[fi][3]]
      ctx.fillStyle = color
      ctx.globalAlpha = baseAlpha
      ctx.shadowColor = color
      ctx.shadowBlur = 4
      ctx.fillRect(pos.x - 1, pos.y - 1, 2, 2)
    }
    ctx.shadowBlur = 0
    ctx.globalAlpha = 1

    // Draw nodes
    drawNodes()
  }

  function drawNodes() {
    for (let i = 0; i < NODES.length; i++) {
      const n = NODES[i]
      const nx = n.x * W, ny = n.y * H
      const breathe = n.r * (1 + Math.sin(time * 0.5 + i) * 0.03)
      const isHovered = hoveredNode === i

      const grad = ctx.createRadialGradient(nx, ny, 0, nx, ny, breathe * 1.5)
      const baseAlpha = isHovered ? 0.35 : 0.18
      const edgeAlpha = isHovered ? 0.08 : 0.02

      // Use a neutral warm colour for nodes
      grad.addColorStop(0, `rgba(165,61,46,${baseAlpha})`)
      grad.addColorStop(0.6, `rgba(165,61,46,${baseAlpha * 0.5})`)
      grad.addColorStop(1, `rgba(165,61,46,${edgeAlpha})`)

      ctx.beginPath()
      ctx.arc(nx, ny, breathe * 1.5, 0, Math.PI * 2)
      ctx.fillStyle = grad
      ctx.fill()

      // Core dot
      ctx.beginPath()
      ctx.arc(nx, ny, 3, 0, Math.PI * 2)
      ctx.fillStyle = `rgba(165,61,46,${isHovered ? 0.6 : 0.3})`
      ctx.fill()
    }
  }

  function drawNodesStatic() {
    for (let i = 0; i < NODES.length; i++) {
      const n = NODES[i]
      const nx = n.x * W, ny = n.y * H
      const grad = ctx.createRadialGradient(nx, ny, 0, nx, ny, n.r * 1.5)
      grad.addColorStop(0, 'rgba(165,61,46,0.18)')
      grad.addColorStop(1, 'rgba(165,61,46,0.02)')
      ctx.beginPath()
      ctx.arc(nx, ny, n.r * 1.5, 0, Math.PI * 2)
      ctx.fillStyle = grad
      ctx.fill()
      ctx.beginPath()
      ctx.arc(nx, ny, 3, 0, Math.PI * 2)
      ctx.fillStyle = 'rgba(165,61,46,0.3)'
      ctx.fill()
    }
  }

  /* ── Theme change observer ── */
  const themeObs = new MutationObserver(() => {
    // Colours are CSS-independent (hardcoded RGBA), so just redraw
    if (visible && !animId) tick()
