  const STRIDE = 6 // progress, speed, flowIdx, active, jitter, sinePhase
  const pool = new Float32Array(MAX_PARTICLES * STRIDE)

  let W = 0, H = 0, dpr = 1
  let animId = 0
  let visible = false
  const activeFlows = [true, true, true, true]
  let hoveredNode = -1
  let time = 0

