---
import PortalLayout from '../layouts/PortalLayout.astro'
import { articles, getArticlesByCategory } from '../data/articles'

const groups = getArticlesByCategory()
const totalArticles = articles.length
---

<PortalLayout title="Clinical Knowledge Base — Sohma Institute" description="Evidence-informed clinical education for cannabis medicine practitioners.">
  <div class="kb">
    <div class="kb-inner">

      <!-- Masthead -->
      <header class="kb-masthead">
        <h1 class="kb-title">Clinical Knowledge Base</h1>
        <p class="kb-lead">
          Evidence-informed clinical education for cannabis medicine practitioners.
          Research syntheses, clinical protocols, and reference material
          developed for Sohma Institute clinicians.
        </p>
        <div class="kb-stats">
          <span>{totalArticles} articles</span>
          <span class="kb-dot" aria-hidden="true"></span>
          <span>{groups.length} disciplines</span>
        </div>
      </header>

      <!-- Category Grid -->
      <div class="cat-grid">
        {groups.map(group => (
          <a href={`/category/${group.meta.slug}`} class="cat-card">
            <div class="cat-card-icon" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d={group.meta.icon} />
              </svg>
            </div>
            <h2 class="cat-card-name">{group.meta.name}</h2>
            <p class="cat-card-desc">{group.meta.description}</p>
            <span class="cat-card-count">{group.articles.length} {group.articles.length === 1 ? 'article' : 'articles'}</span>
          </a>
        ))}
      </div>

      <!-- Colophon -->
      <footer class="kb-footer">
        <p>Sohma Institute &mdash; Clinical Education Division</p>
      </footer>
    </div>
  </div>
</PortalLayout>

<style>
  .kb {
    min-height: 100vh;
    padding: 3rem 2.5rem 2rem;
  }

  .kb-inner {
    max-width: 780px;
    margin: 0 auto;
  }

  /* ── Masthead ── */
  .kb-masthead {
    padding-bottom: 2.25rem;
    margin-bottom: 2.25rem;
    border-bottom: 1px solid #d6d0ca;
  }

  .kb-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2rem;
    font-weight: 600;
    color: #2c2520;
    line-height: 1.2;
    margin: 0 0 0.75rem;
    letter-spacing: -0.01em;
  }

  .kb-lead {
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    color: #6b5e52;
    line-height: 1.65;
    margin: 0 0 1rem;
    max-width: 580px;
  }

  .kb-stats {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #a89e94;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .kb-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: #c9c1b8;
  }

  /* ── Category Grid ── */
  .cat-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .cat-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: #fff;
    border: 1px solid #e8e4e0;
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .cat-card:hover {
    border-color: #d1c9c1;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }

  .cat-card-icon {
    color: #c45a42;
    margin-bottom: 0.875rem;
    opacity: 0.8;
  }

  .cat-card:hover .cat-card-icon {
    opacity: 1;
  }

  .cat-card-name {
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    font-weight: 700;
    color: #2c2520;
    margin: 0 0 0.375rem;
    line-height: 1.3;
  }

  .cat-card-desc {
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    color: #7a6e63;
    line-height: 1.55;
    margin: 0 0 auto;
    padding-bottom: 0.875rem;
  }

  .cat-card-count {
    font-family: 'Manrope', sans-serif;
    font-size: 0.625rem;
    font-weight: 600;
    color: #a89e94;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  /* ── Footer ── */
  .kb-footer {
    padding-top: 1.25rem;
    border-top: 1px solid #d6d0ca;
  }

  .kb-footer p {
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    color: #b8afa7;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
  }

  /* ── Responsive ── */
  @media (max-width: 640px) {
    .kb {
      padding: 2rem 1.25rem 1.5rem;
    }

    .kb-title {
      font-size: 1.625rem;
    }
  }

  @media (max-width: 480px) {
    .cat-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
