---
import PortalLayout from '../layouts/PortalLayout.astro'
import { articles, getArticlesByCategory } from '../data/articles'

const groups = getArticlesByCategory()
const featured = articles.find(a => a.featured)

// Group categories into sections
const sections = [
  {
    heading: 'Foundations',
    slugs: ['fundamentals', 'clinical-practice'],
  },
  {
    heading: 'Advanced Clinical Education',
    slugs: ['research-synthesis', 'womens-health'],
  },
  {
    heading: 'Reference & Philosophy',
    slugs: ['clinical-reference', 'practice-philosophy'],
  },
]
---

<PortalLayout title="Clinical Knowledge Base — Sohma Institute" description="Evidence-informed clinical education for cannabis medicine practitioners.">
  <div class="kb">

    <!-- Hero -->
    <div class="kb-hero">
      <div class="kb-hero-inner">
        <h1 class="kb-hero-title">Sohma Institute</h1>
        <p class="kb-hero-sub">Evidence-informed clinical education for cannabis medicine practitioners.</p>
      </div>
    </div>

    <div class="kb-body">

      <!-- Featured Banner -->
      {featured && (
        <a href={`/${featured.slug}`} class="kb-banner">
          <div class="kb-banner-icon" aria-hidden="true">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
            </svg>
          </div>
          <div class="kb-banner-content">
            <span class="kb-banner-label">Featured</span>
            <span class="kb-banner-title">{featured.title}</span>
            <span class="kb-banner-desc">{featured.subtitle}</span>
          </div>
          <span class="kb-banner-cta">Read &rarr;</span>
        </a>
      )}

      <!-- Sections -->
      {sections.map(section => {
        const sectionGroups = section.slugs
          .map(s => groups.find(g => g.meta.slug === s))
          .filter(Boolean) as typeof groups
        if (sectionGroups.length === 0) return null
        return (
          <div class="kb-section">
            <h2 class="kb-section-heading">{section.heading}</h2>
            <div class="kb-card-grid">
              {sectionGroups.map(group => (
                <a href={`/category/${group.meta.slug}`} class="kb-card">
                  <div class="kb-card-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d={group.meta.icon} />
                    </svg>
                  </div>
                  <h3 class="kb-card-name">{group.meta.name}</h3>
                  <p class="kb-card-desc">{group.meta.description}</p>
                </a>
              ))}
            </div>
          </div>
        )
      })}

    </div>
  </div>
</PortalLayout>

<style>
  .kb {
    min-height: 100vh;
  }

  /* ── Hero ── */
  .kb-hero {
    position: relative;
    text-align: center;
    padding: 3.5rem 2rem 2.5rem;
    overflow: hidden;
  }

  .kb-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 60% at 50% 100%, rgba(196,90,66,0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  .kb-hero-inner {
    position: relative;
    max-width: 560px;
    margin: 0 auto;
  }

  .kb-hero-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.75rem;
    font-weight: 500;
    color: #2c2520;
    line-height: 1.15;
    margin: 0 0 0.625rem;
    letter-spacing: -0.01em;
  }

  .kb-hero-sub {
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    color: #7a6e63;
    line-height: 1.6;
    margin: 0;
  }

  /* ── Body ── */
  .kb-body {
    max-width: 740px;
    margin: 0 auto;
    padding: 0 2rem 2.5rem;
  }

  /* ── Banner ── */
  .kb-banner {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.125rem 1.5rem;
    margin-bottom: 2.5rem;
    background: linear-gradient(135deg, rgba(196,90,66,0.06) 0%, rgba(196,90,66,0.02) 100%);
    border: 1px solid rgba(196,90,66,0.12);
    border-radius: 10px;
    text-decoration: none;
    transition: border-color 0.2s;
  }

  .kb-banner:hover {
    border-color: rgba(196,90,66,0.25);
  }

  .kb-banner-icon {
    flex-shrink: 0;
    color: #c45a42;
    opacity: 0.7;
  }

  .kb-banner-content {
    flex: 1;
    min-width: 0;
  }

  .kb-banner-label {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 0.5625rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: #c45a42;
    margin-bottom: 0.125rem;
  }

  .kb-banner-title {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    font-weight: 700;
    color: #2c2520;
    line-height: 1.35;
  }

  .kb-banner-desc {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    color: #7a6e63;
    line-height: 1.4;
    margin-top: 0.125rem;
  }

  .kb-banner-cta {
    flex-shrink: 0;
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    font-weight: 700;
    color: #fff;
    background: #c45a42;
    padding: 0.5em 1.125em;
    border-radius: 6px;
    white-space: nowrap;
    transition: opacity 0.15s;
  }

  .kb-banner:hover .kb-banner-cta {
    opacity: 0.9;
  }

  /* ── Sections ── */
  .kb-section {
    margin-bottom: 2.25rem;
  }

  .kb-section-heading {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.375rem;
    font-weight: 600;
    color: #2c2520;
    text-align: center;
    margin: 0 0 1.125rem;
    letter-spacing: -0.005em;
  }

  /* ── Card Grid ── */
  .kb-card-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.875rem;
  }

  .kb-card {
    display: flex;
    flex-direction: column;
    padding: 1.375rem 1.25rem;
    background: #fff;
    border: 1px solid #e8e4e0;
    border-radius: 10px;
    text-decoration: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .kb-card:hover {
    border-color: #d1c9c1;
    box-shadow: 0 2px 12px rgba(0,0,0,0.05);
  }

  .kb-card-icon {
    color: #3d3229;
    margin-bottom: 0.875rem;
    opacity: 0.55;
  }

  .kb-card:hover .kb-card-icon {
    opacity: 0.75;
  }

  .kb-card-name {
    font-family: 'Manrope', sans-serif;
    font-size: 0.9375rem;
    font-weight: 700;
    color: #2c2520;
    margin: 0 0 0.3rem;
    line-height: 1.3;
  }

  .kb-card-desc {
    font-family: 'Manrope', sans-serif;
    font-size: 0.8125rem;
    color: #7a6e63;
    line-height: 1.5;
    margin: 0;
  }

  /* ── Responsive ── */
  @media (max-width: 640px) {
    .kb-hero {
      padding: 2.5rem 1.25rem 2rem;
    }

    .kb-hero-title {
      font-size: 2.125rem;
    }

    .kb-body {
      padding: 0 1.25rem 2rem;
    }

    .kb-banner {
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .kb-banner-cta {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .kb-card-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
