    grad.addColorStop(1, rgbStr(c.progress, 0))
    ctx.beginPath()
    ctx.arc(pos.x, pos.y, r, 0, Math.PI * 2)
    ctx.fillStyle = grad
    ctx.fill()
    // Core
    ctx.beginPath()
    ctx.arc(pos.x, pos.y, 3, 0, Math.PI * 2)
    ctx.fillStyle = rgbStr(c.progress, 0.9)
    ctx.fill()
  }

  /* ── Draw nodes ── */
  function drawNodes() {
    var c = getColors()
    var ba = baseAlpha()
    for (var i = 0; i < NODE_COUNT; i++) {
      var n = nodePositions[i]
      if (!n) continue
      nodeGlow[i] *= 0.96

      var isActive = (i === activeNode)
      var r = 3 + Math.sin(time * 1.2 + i * 0.9) * 0.8
      var a = isActive ? 0.95 : 0.4

      ctx.beginPath()
      ctx.arc(n.x, n.y, r, 0, Math.PI * 2)
      ctx.fillStyle = 'rgba(255,255,255,' + a + ')'
      ctx.fill()
    }
  }

  /* ── Update & draw forward particles ── */
  function drawForward() {
    var c = getColors()
    var ba = baseAlpha()
    for (var i = 0; i < FWD_COUNT; i++) {
      var b = i * FWD_STRIDE
      if (fwd[b + 2] === 0) continue

      // Node proximity slowdown
      var speed = fwd[b + 1]
      for (var n = 0; n < NODE_COUNT; n++) {
        if (Math.abs(fwd[b] - nodeTs[n]) < 0.02) {
          speed *= 0.3
          nodeGlow[n] = Math.min(nodeGlow[n] + 0.08, 1)
          break
        }
      }
      fwd[b] += speed
      // Clamp to scroll progress
      if (fwd[b] >= progressT) { fwd[b + 2] = 0; continue }

      var t = fwd[b]
      var theta = t * TOTAL_THETA
      var pos = spiralPos(t)
      var tan = spiralTangent(t)
      var len = Math.sqrt(tan.x * tan.x + tan.y * tan.y) || 1
      var nx = -tan.y / len
      var ny = tan.x / len
      var helix = HELIX_AMP * Math.sin(HELIX_FREQ * theta)
      var jitter = (Math.sin(time * 2 + fwd[b + 4]) * 2) * 0.5
      var px = pos.x + nx * (helix + jitter)
      var py = pos.y + ny * (helix + jitter)

      // Fade in/out near edges
      var a = ba
      if (t < 0.05) a = (t / 0.05) * ba
      var fadeZone = progressT - 0.05
      if (fadeZone > 0 && t > fadeZone) a *= (progressT - t) / 0.05

      var col = lerpColor(c.fwdStart, c.fwdEnd, t)

      // Halo
      ctx.fillStyle = rgbStr(col, a * 0.25)
      ctx.fillRect(px - 2.5, py - 2.5, 6, 6)
      // Core
      ctx.fillStyle = rgbStr(col, a)
      ctx.fillRect(px - 0.5, py - 0.5, 2.5, 2.5)
    }
  }

  /* ── Update & draw helix return particles (spiral back along strand B) ── */
  function drawReturnHelix() {
    var c = getColors()
    var ba = baseAlpha() * 0.6
    for (var i = 0; i < RH_COUNT; i++) {
      var b = i * RH_STRIDE
      if (rh[b + 2] === 0) continue

      rh[b] -= rh[b + 1]
      if (rh[b] <= 0) { rh[b + 2] = 0; continue }

      var t = rh[b]
      var theta = t * TOTAL_THETA
      var pos = spiralPos(t)
      var tan = spiralTangent(t)
      var len = Math.sqrt(tan.x * tan.x + tan.y * tan.y) || 1
      var nx = -tan.y / len
      var ny = tan.x / len
      var helix = HELIX_AMP * Math.sin(HELIX_FREQ * theta + Math.PI)
      var jitter = (Math.sin(time * 1.5 + rh[b + 3]) * 1.5) * 0.4
      var px = pos.x + nx * (helix + jitter)
      var py = pos.y + ny * (helix + jitter)

      var a = ba
      if (t < 0.05) a *= t / 0.05

      ctx.fillStyle = rgbStr(c.ret, a * 0.2)
      ctx.fillRect(px - 1.5, py - 1.5, 4, 4)
      ctx.fillStyle = rgbStr(c.ret, a)
      ctx.fillRect(px - 0.5, py - 0.5, 2, 2)
    }
  }

  /* ── Sparks from active node ── */
  var sparkAccum = 0

  function spawnSparks() {
    if (activeNode < 0) return
    var np = nodePositions[activeNode]
    if (!np) return
    sparkAccum += 1.5 + Math.random()
    var toSpawn = Math.floor(sparkAccum)
    if (toSpawn <= 0) return
    sparkAccum -= toSpawn
    for (var i = 0; i < SPARK_COUNT && toSpawn > 0; i++) {
      var b = i * SPARK_STRIDE
      if (sparks[b + 6] === 0) {
        var angle = Math.random() * Math.PI * 2
        var speed = 0.4 + Math.random() * 1.2
        sparks[b]     = np.x
        sparks[b + 1] = np.y
        sparks[b + 2] = Math.cos(angle) * speed
        sparks[b + 3] = Math.sin(angle) * speed
        sparks[b + 4] = 0                             // life
        sparks[b + 5] = 30 + Math.random() * 40       // maxLife (frames)
        sparks[b + 6] = 1                              // active
        toSpawn--
      }
    }
  }

  function drawSparks() {
    var c = getColors()
    for (var i = 0; i < SPARK_COUNT; i++) {
      var b = i * SPARK_STRIDE
      if (sparks[b + 6] === 0) continue

      sparks[b + 4] += 1
      if (sparks[b + 4] >= sparks[b + 5]) { sparks[b + 6] = 0; continue }

      // Move + decelerate
      sparks[b]     += sparks[b + 2]
      sparks[b + 1] += sparks[b + 3]
      sparks[b + 2] *= 0.96
      sparks[b + 3] *= 0.96

      var life = sparks[b + 4] / sparks[b + 5]
      var a = life < 0.15 ? life / 0.15 : (1 - life) * 1.2
      a = Math.min(a, 1)

      var px = sparks[b], py = sparks[b + 1]
      var sz = 1.5 * (1 - life * 0.5)

      // Warm white glow
      ctx.fillStyle = rgbStr(c.progress, a * 0.2)
      ctx.fillRect(px - sz, py - sz, sz * 3, sz * 3)
      ctx.fillStyle = 'rgba(255,255,245,' + a * 0.9 + ')'
      ctx.fillRect(px - sz * 0.3, py - sz * 0.3, sz * 1.2, sz * 1.2)
    }
  }

  /* ── Update label visibility (only the most recently reached node) ── */
  function updateLabels() {
    activeNode = -1
    for (var i = NODE_COUNT - 1; i >= 0; i--) {
      if (progressT >= nodeTs[i] - 0.01) { activeNode = i; break }
    }
    for (var j = 0; j < labels.length; j++) {
      var nd = parseInt(labels[j].dataset.node)
      if (isNaN(nd)) continue
      labels[j].classList.toggle('reached', nd === activeNode)
    }
  }

  /* ── Resize ── */
  function resize() {
    var rect = wrap.getBoundingClientRect()
    dpr = Math.min(window.devicePixelRatio || 1, 2)
    W = rect.width
    H = rect.height
    canvas.width = W * dpr
    canvas.height = H * dpr
    canvas.style.width = W + 'px'
    canvas.style.height = H + 'px'
    ctx.setTransform(dpr, 0, 0, dpr, 0, 0)
    computeSpiral()
  }

  function debouncedResize() {
    clearTimeout(resizeTimer)
    resizeTimer = setTimeout(resize, 200)
  }
  window.addEventListener('resize', debouncedResize)

  /* ── Hover detection (node glow only) ── */
  section.addEventListener('mousemove', function(e) {
    var rect = wrap.getBoundingClientRect()
    var mx = e.clientX - rect.left
    var my = e.clientY - rect.top
    hoveredNode = -1
    for (var i = 0; i < NODE_COUNT; i++) {
      var np = nodePositions[i]
      if (!np) continue
      var dx = mx - np.x, dy = my - np.y
      if (Math.sqrt(dx * dx + dy * dy) < 40) { hoveredNode = i; break }
    }
  })
  section.addEventListener('mouseleave', function() {
    hoveredNode = -1
  })

  /* ── Main loop ── */
  function tick() {
    if (!visible) { animId = 0; return }
    animId = requestAnimationFrame(tick)
    time += 0.016

    progressT = getScrollProgress()

    ctx.clearRect(0, 0, W, H)

    spawnFwd()
    spawnRetHelix()
    spawnSparks()
    drawSpiralPath()
    drawForward()
    drawReturnHelix()
    drawNodes()
    drawProgressNode()
    drawSparks()
    updateLabels()
  }

  /* ── Visibility gating ── */
  new IntersectionObserver(function(entries) {
    for (var i = 0; i < entries.length; i++) {
      if (entries[i].isIntersecting) {
        visible = true
        if (!animId) { resize(); animId = requestAnimationFrame(tick) }
      } else {
        visible = false
      }
    }
  }, { threshold: 0.01 }).observe(scrollOuter)

  /* ── Theme reactivity ── */
  new MutationObserver(function() {
    if (visible) resize()
  }).observe(document.documentElement, { attributes: true, attributeFilter: ['data-theme'] })
})()
</script>


