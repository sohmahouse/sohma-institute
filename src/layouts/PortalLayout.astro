<script>
  function initPortalSidebar() {
    const toggle = document.getElementById('sidebar-toggle')
    const closeBtn = document.getElementById('sidebar-close')
    const sidebar = document.getElementById('portal-sidebar')
    const overlay = document.getElementById('sidebar-overlay')
    if (!toggle || !sidebar || !overlay) return

    function openSidebar() {
      sidebar.classList.add('open')
      overlay.classList.add('visible')
      document.body.style.overflow = 'hidden'
    }

    function closeSidebar() {
      sidebar.classList.remove('open')
      overlay.classList.remove('visible')
      document.body.style.overflow = ''
    }

    toggle.addEventListener('click', () => {
      sidebar.classList.contains('open') ? closeSidebar() : openSidebar()
    })

    overlay.addEventListener('click', closeSidebar)
    if (closeBtn) closeBtn.addEventListener('click', closeSidebar)

    // Close sidebar on link click (mobile)
    sidebar.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 1024) closeSidebar()
      })
    })

    // Dropdown toggles
    sidebar.querySelectorAll('.sidebar-dropdown').forEach(dropdown => {
      const toggleBtn = dropdown.querySelector('.sidebar-dropdown-toggle')
      const toggleLink = dropdown.querySelector('.sidebar-dropdown-toggle-link')

      // Auto-open if current URL matches any sub-link href or the toggle-link href
      const currentPath = window.location.pathname.replace(/\/$/, '')
      const allLinks = dropdown.querySelectorAll('.sidebar-sub-link')
      const linkHref = toggleLink?.getAttribute('href')?.replace(/\/$/, '')
      let shouldOpen = false

      if (linkHref && currentPath.startsWith(linkHref)) {
        shouldOpen = true
      }
      allLinks.forEach(link => {
        const href = link.getAttribute('href')?.replace(/\/$/, '')
        if (href && currentPath === href) {
          shouldOpen = true
          link.classList.add('active')
        }
      })
      if (dropdown.querySelector('.sidebar-sub-link.active')) {
        shouldOpen = true
      }

      if (shouldOpen) {
        dropdown.classList.add('open')
        if (toggleBtn) toggleBtn.setAttribute('aria-expanded', 'true')
        if (toggleLink) toggleLink.classList.add('active')
      }

      // Button-style toggles (Whitepapers) handled by document-level event delegation below
      // Link-style toggles (Education) — auto-open handles it
    })
  }

  // Scroll-spy for right TOC
  function initScrollSpy() {
    const tocLinks = document.querySelectorAll('.toc-link[data-toc-id]')
    if (tocLinks.length === 0) return

    const tocItems = Array.from(document.querySelectorAll('.toc-list > li'))
    const ids = Array.from(tocLinks).map(el => (el as HTMLElement).dataset.tocId!)
    const sections = ids.map(id => document.getElementById(id)).filter(Boolean) as HTMLElement[]
    if (sections.length === 0) return

    // Build group map: each toc id maps to its parent level-1 id
    const groups = new Map<string, string>()
    let currentL1Id = ''
    tocItems.forEach(li => {
      const link = li.querySelector('.toc-link') as HTMLElement
      if (!link) return
      const id = link.dataset.tocId!
      if (li.classList.contains('toc-level-1')) {
        currentL1Id = id
        groups.set(id, id)
      } else {
        groups.set(id, currentL1Id)
      }
    })

    let activeId = ''
    let activeL1Id = ''

    function updateActive() {
      const scrollTop = window.scrollY + 120
      let currentId = sections[0]?.id || ''

      for (const section of sections) {
        if (section.offsetTop <= scrollTop) {
          currentId = section.id
        }
      }

      if (currentId !== activeId) {
        activeId = currentId
        const newL1Id = groups.get(activeId) || ''

        // Highlight active link
        tocLinks.forEach(link => {
          const el = link as HTMLElement
          if (el.dataset.tocId === activeId) {
            el.classList.add('active')
          } else {
            el.classList.remove('active')
          }
        })

        // Show/hide level-2 items for active section
        if (newL1Id !== activeL1Id) {
          activeL1Id = newL1Id
          tocItems.forEach(li => {
            if (li.classList.contains('toc-level-2')) {
              const link = li.querySelector('.toc-link') as HTMLElement
              if (!link) return
              if (groups.get(link.dataset.tocId!) === activeL1Id) {
                li.classList.add('toc-sub-visible')
              } else {
                li.classList.remove('toc-sub-visible')
              }
            }
          })
        }
      }
    }

    window.addEventListener('scroll', updateActive, { passive: true })
    updateActive()
  }

  // Drag-to-resize sidebars
  function initResize() {
    const leftSidebar = document.getElementById('portal-sidebar') as HTMLElement
    const rightSidebar = document.getElementById('portal-toc') as HTMLElement
    const main = document.getElementById('portal-main') as HTMLElement
    const resizeLeft = document.getElementById('resize-left')
    const resizeRight = document.getElementById('resize-right')

    function setupDrag(handle: HTMLElement | null, sidebar: HTMLElement | null, side: 'left' | 'right') {
      if (!handle || !sidebar) return

      let startX = 0
      let startWidth = 0

      function onMouseDown(e: MouseEvent) {
        e.preventDefault()
        startX = e.clientX
        startWidth = sidebar.getBoundingClientRect().width
        handle.classList.add('dragging')
        document.body.style.cursor = 'col-resize'
        document.body.style.userSelect = 'none'
        document.addEventListener('mousemove', onMouseMove)
        document.addEventListener('mouseup', onMouseUp)
      }

      function onMouseMove(e: MouseEvent) {
        const delta = side === 'left' ? e.clientX - startX : startX - e.clientX
        const newWidth = Math.max(180, Math.min(400, startWidth + delta))
        sidebar.style.width = newWidth + 'px'
        if (main && side === 'left') {
          main.style.marginLeft = newWidth + 'px'
        }
        if (side === 'left') updateProgressPosition(newWidth)
      }

      function onMouseUp() {
        handle.classList.remove('dragging')
        document.body.style.cursor = ''
        document.body.style.userSelect = ''
        document.removeEventListener('mousemove', onMouseMove)
        document.removeEventListener('mouseup', onMouseUp)
      }

      handle.addEventListener('mousedown', onMouseDown)
    }

    setupDrag(resizeLeft, leftSidebar, 'left')
    setupDrag(resizeRight, rightSidebar, 'right')
  }

  function initMobileToc() {
    const mobileToc = document.getElementById('mobile-toc')
    const toggleBtn = document.getElementById('mobile-toc-toggle')
    if (!mobileToc || !toggleBtn) return

    // Move TOC above the abstract section
    const abstract = document.getElementById('abstract')
    if (abstract) {
      abstract.parentElement?.insertBefore(mobileToc, abstract)
    }

    toggleBtn.addEventListener('click', () => {
      const isOpen = mobileToc.classList.contains('open')
      mobileToc.classList.toggle('open')
      toggleBtn.setAttribute('aria-expanded', isOpen ? 'false' : 'true')
    })

    // Close on link click
    mobileToc.querySelectorAll('.mobile-toc-link').forEach(link => {
      link.addEventListener('click', () => {
        mobileToc.classList.remove('open')
        toggleBtn.setAttribute('aria-expanded', 'false')
      })
    })
  }

  // Event delegation — survives View Transitions, no double-binding
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement

    // Dropdown toggles
    const dropdownBtn = target.closest('.sidebar-dropdown-toggle')
    if (dropdownBtn) {
      const dropdown = dropdownBtn.closest('.sidebar-dropdown')
      if (!dropdown) return
      const isOpen = dropdown.classList.contains('open')
      dropdown.classList.toggle('open')
      dropdownBtn.setAttribute('aria-expanded', isOpen ? 'false' : 'true')
      return
    }

    // Theme toggle
    const themeBtn = target.closest('.theme-toggle')
    if (themeBtn) {
      const html = document.documentElement
      html.setAttribute('data-theme-transitioning', '')
      const current = html.getAttribute('data-theme')
      const next = current === 'dark' ? 'light' : 'dark'

      if (next === 'dark') {
        html.setAttribute('data-theme', 'dark')
        localStorage.setItem('sohma-theme', 'dark')
      } else {
        html.removeAttribute('data-theme')
        localStorage.setItem('sohma-theme', 'light')
      }

      setTimeout(() => html.removeAttribute('data-theme-transitioning'), 500)
      return
    }

    // Action buttons (Copy, Cite, PDF)
    const actionBtn = target.closest('.wp-action-btn') as HTMLButtonElement | null
    if (actionBtn) {
      const action = actionBtn.dataset.action
      if (action === 'share') {
        const titleEl = document.querySelector('.wp-title')
        const authorEl = document.querySelector('.wp-meta-item')
        const bodyEl = document.querySelector('.wp-body')
        const title = titleEl?.textContent?.trim() || document.title
        const author = authorEl?.textContent?.trim().replace(/\s+/g, ' ') || 'Sohma Institute'
        const url = window.location.href

        // Extract formatted text from the article body
        function extractText(el: Element): string {
          const lines: string[] = []
          el.querySelectorAll('h1, h2, h3, h4, h5, h6, p, li, blockquote, figcaption, .callout-body, .ref-item').forEach(node => {
            const tag = node.tagName.toLowerCase()
            const text = node.textContent?.trim()
            if (!text) return
            if (tag === 'h1') lines.push('\n' + text.toUpperCase() + '\n')
            else if (tag === 'h2') lines.push('\n## ' + text + '\n')
            else if (tag === 'h3') lines.push('\n### ' + text + '\n')
            else if (tag === 'h4' || tag === 'h5' || tag === 'h6') lines.push('\n#### ' + text + '\n')
            else if (tag === 'li') lines.push('  - ' + text)
            else if (tag === 'blockquote') lines.push('\n> ' + text + '\n')
            else lines.push(text)
          })
          return lines.join('\n')
        }

        const bodyText = bodyEl ? extractText(bodyEl) : ''
        const fullText = `${title}\n${author}\n${url}\n${'—'.repeat(40)}\n${bodyText}`

        navigator.clipboard.writeText(fullText).then(() => {
          const span = actionBtn.querySelector('span')
          const orig = span?.textContent
          actionBtn.classList.add('copied')
          if (span) span.textContent = 'Copied'
          setTimeout(() => {
            actionBtn.classList.remove('copied')
            if (span && orig) span.textContent = orig
          }, 1500)
        })
      } else if (action === 'cite') {
        const titleEl = document.querySelector('.wp-title')
        const authorEl = document.querySelector('.wp-meta-item')
        const title = titleEl?.textContent?.trim() || document.title
        const author = authorEl?.textContent?.trim() || 'Sohma Institute'
        const year = new Date().getFullYear()
        const citation = `${author} (${year}). ${title}. Sohma Institute. ${window.location.href}`
        navigator.clipboard.writeText(citation).then(() => {
          const span = actionBtn.querySelector('span')
          const orig = span?.textContent
          actionBtn.classList.add('copied')
          if (span) span.textContent = 'Copied'
          setTimeout(() => {
            actionBtn.classList.remove('copied')
            if (span && orig) span.textContent = orig
          }, 1500)
        })
      } else if (action === 'pdf') {
        window.print()
      }
      return
    }
  })

  function updateProgressPosition(sidebarWidth: number) {
    const hBar = document.getElementById('reading-progress-h')
    const vBar = document.getElementById('reading-progress-v')
    if (hBar) hBar.style.left = sidebarWidth + 'px'
    if (vBar) vBar.style.left = sidebarWidth + 'px'
  }

  function initReadingProgress() {
    const hBar = document.getElementById('reading-progress-h')
    const vBar = document.getElementById('reading-progress-v')
    const wrapper = document.getElementById('reading-progress')
    const sidebar = document.getElementById('portal-sidebar')
    if (!hBar || !vBar || !wrapper) return

    // Set initial position from sidebar width
    if (sidebar) {
      const w = sidebar.getBoundingClientRect().width
      updateProgressPosition(w)
    }

    function update() {
      const scrollTop = window.scrollY
      const docHeight = document.documentElement.scrollHeight - window.innerHeight
      if (docHeight <= 0) return

      const progress = Math.min(scrollTop / docHeight, 1)

      hBar.style.transform = `scaleX(${progress})`
      vBar.style.transform = `scaleY(${progress})`

      if (progress > 0.01) {
        wrapper.classList.add('active')
      } else {
        wrapper.classList.remove('active')
      }
    }

    window.addEventListener('scroll', update, { passive: true })
    window.addEventListener('resize', update, { passive: true })
    update()
  }

  function initTocOffset() {
    const toc = document.getElementById('portal-toc') as HTMLElement
    const metaRow = document.querySelector('.wp-meta-row') as HTMLElement
    if (!toc || !metaRow) return

    const offset = metaRow.offsetTop + metaRow.offsetHeight
    toc.style.marginTop = offset + 'px'
  }

  function initPage() {
    initPortalSidebar()
    initScrollSpy()
    initResize()
    initMobileToc()
    initReadingProgress()
    initTocOffset()
  }

  document.addEventListener('DOMContentLoaded', initPage)
  document.addEventListener('astro:page-load', initPage)
</script>
