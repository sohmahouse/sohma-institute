              parts.push(`<table>${node.innerHTML}</table>`)
            } else if (tag === 'section' || tag === 'div') {
              parts.push(buildHtml(node))
            } else if (tag === 'figure') {
              const cap = node.querySelector('figcaption')
              if (cap) parts.push(`<p><em>${cap.innerHTML}</em></p>`)
            }
          }
          return parts.join('')
        }

        const bodyHtml = bodyEl ? buildHtml(bodyEl) : ''

        // Assemble full HTML document
        const htmlContent = [
          `<h1>${title}</h1>`,
          subtitle ? `<p><em>${subtitle}</em></p>` : '',
          `<p><strong>${authorName}</strong><br>${authorRole}<br>${institution}</p>`,
          editor ? `<p><em>Editor:</em> ${editor}${editorRole ? ', ' + editorRole : ''}</p>` : '',
          `<p>${metaLine}</p>`,
          `<h2>Abstract</h2>`,
          `<p>${summary}</p>`,
          `<hr>`,
          bodyHtml,
          `<hr>`,
          `<h2>Suggested Citation</h2>`,
          `<p>${surname}, ${initial} (${year}). ${title}${subtitle ? ': ' + subtitle : ''}. <em>Sohma Institute of Traditional Medicines</em>. ${permalink}</p>`,
          `<h2>Disclosure</h2>`,
          `<p>This material is produced for clinical education purposes and does not constitute medical advice. Content is reviewed by the Sohma Institute Academic Board.</p>`,
        ].join('')

        // Plain text fallback
        function extractPlain(el: Element): string {
          const lines: string[] = []
          el.querySelectorAll('h2, h3, h4, h5, h6, p, li, blockquote').forEach(node => {
            const t = node.textContent?.trim()
            if (!t) return
            const tg = node.tagName.toLowerCase()
            if (tg.startsWith('h')) lines.push('\n' + t + '\n')
            else if (tg === 'li') lines.push('  - ' + t)
            else lines.push(t)
          })
          return lines.join('\n')
        }

        const sep = '—'.repeat(40)
        const plainText = [
          title.toUpperCase(),
          subtitle ? subtitle : '',
          '',
          authorName,
          authorRole,
          institution,
          editor ? `Editor: ${editor}${editorRole ? ', ' + editorRole : ''}` : '',
          '',
          metaLine,
          '',
          'Abstract',
          summary,
          '',
          sep,
          bodyEl ? extractPlain(bodyEl) : '',
          sep,
          '',
          'Suggested Citation',
          `${surname}, ${initial} (${year}). ${title}${subtitle ? ': ' + subtitle : ''}. Sohma Institute of Traditional Medicines. ${permalink}`,
          '',
          'Disclosure',
          'This material is produced for clinical education purposes and does not constitute medical advice. Content is reviewed by the Sohma Institute Academic Board.',
        ].filter(l => l !== undefined).join('\n')

        // Copy as rich HTML with plain text fallback
        const htmlBlob = new Blob([htmlContent], { type: 'text/html' })
        const textBlob = new Blob([plainText], { type: 'text/plain' })
        navigator.clipboard.write([
          new ClipboardItem({ 'text/html': htmlBlob, 'text/plain': textBlob })
        ]).then(() => {
          const span = actionBtn.querySelector('span')
          const orig = span?.textContent
          actionBtn.classList.add('copied')
          if (span) span.textContent = 'Copied'
          setTimeout(() => {
            actionBtn.classList.remove('copied')
            if (span && orig) span.textContent = orig
          }, 1500)
        })
      } else if (action === 'cite') {
        const wp = document.querySelector('.whitepaper') as HTMLElement | null
        const titleEl = document.querySelector('.wp-title')
        const title = titleEl?.textContent?.trim() || document.title
        const subtitle = wp?.dataset.subtitle || ''
        const date = wp?.dataset.date || ''
        const url = window.location.href

        // Author from credit structure
        const creditEls = document.querySelectorAll('.wp-credit')
        const authorCredit = creditEls[0]
        const authorName = authorCredit?.querySelector('.wp-credit-name')?.textContent?.trim() || 'Cameron Rosin'
        const nameParts = authorName.trim().split(/\s+/)
        const surname = nameParts.length > 1 ? nameParts[nameParts.length - 1] : nameParts[0]
        const firstName = nameParts[0] || ''
        const initial = firstName ? firstName[0] + '.' : ''
        const yearMatch = date.match(/\d{4}/)
        const year = yearMatch ? yearMatch[0] : String(new Date().getFullYear())
        const permalink = url.replace(/^https?:\/\/localhost:\d+/, 'https://sohma.institute')
        const fullTitle = title + (subtitle ? ': ' + subtitle : '')
        const slug = permalink.split('/').filter(Boolean).pop() || ''

        // APA 7th edition
        const apa = `${surname}, ${initial} (${year}). ${fullTitle}. Sohma Institute of Traditional Medicines. ${permalink}`

        // Harvard
        const harvard = `${surname}, ${initial} ${year}, '${fullTitle}', Sohma Institute of Traditional Medicines, viewed ${new Date().toLocaleDateString('en-AU', { day: 'numeric', month: 'long', year: 'numeric' })}, <${permalink}>.`

        // BibTeX
        const bibtex = `@article{${surname.toLowerCase()}${year}${slug.replace(/-/g, '')},
  author    = {${surname}, ${firstName}},
  title     = {${fullTitle}},
  year      = {${year}},
  publisher = {Sohma Institute of Traditional Medicines},
  url       = {${permalink}}
}`

        // Combined plain text with all three formats
        const citePlain = [
          'APA',
          apa,
          '',
          'Harvard',
          harvard,
          '',
          'BibTeX',
          bibtex,
        ].join('\n')

        // Rich HTML version
        const citeHtml = [
          `<p><strong>APA</strong><br>${surname}, ${initial} (${year}). ${fullTitle}. <em>Sohma Institute of Traditional Medicines</em>. <a href="${permalink}">${permalink}</a></p>`,
          `<p><strong>Harvard</strong><br>${surname}, ${initial} ${year}, '${fullTitle}', <em>Sohma Institute of Traditional Medicines</em>, viewed ${new Date().toLocaleDateString('en-AU', { day: 'numeric', month: 'long', year: 'numeric' })}, &lt;${permalink}&gt;.</p>`,
          `<p><strong>BibTeX</strong><br><code>${bibtex.replace(/\n/g, '<br>')}</code></p>`,
        ].join('')

        const htmlBlob = new Blob([citeHtml], { type: 'text/html' })
        const textBlob = new Blob([citePlain], { type: 'text/plain' })
        navigator.clipboard.write([
          new ClipboardItem({ 'text/html': htmlBlob, 'text/plain': textBlob })
        ]).then(() => {
          const span = actionBtn.querySelector('span')
          const orig = span?.textContent
          actionBtn.classList.add('copied')
          if (span) span.textContent = 'Copied'
          setTimeout(() => {
            actionBtn.classList.remove('copied')
            if (span && orig) span.textContent = orig
          }, 1500)
        })
      } else if (action === 'pdf') {
        window.print()
      }
      return
    }
  })

  function updateProgressPosition(sidebarWidth: number) {
    const hBar = document.getElementById('reading-progress-h')
    const vBar = document.getElementById('reading-progress-v')
    if (hBar) hBar.style.left = sidebarWidth + 'px'
    if (vBar) vBar.style.left = sidebarWidth + 'px'
  }

  function initReadingProgress() {
    const hBar = document.getElementById('reading-progress-h')
    const vBar = document.getElementById('reading-progress-v')
    const wrapper = document.getElementById('reading-progress')
    const sidebar = document.getElementById('portal-sidebar')
    if (!hBar || !vBar || !wrapper) return

    // Set initial position from sidebar width
    if (sidebar) {
      const w = sidebar.getBoundingClientRect().width
      updateProgressPosition(w)
    }

    function update() {
      const scrollTop = window.scrollY
      const docHeight = document.documentElement.scrollHeight - window.innerHeight
      if (docHeight <= 0) return

      const progress = Math.min(scrollTop / docHeight, 1)

      hBar.style.transform = `scaleX(${progress})`
      vBar.style.transform = `scaleY(${progress})`

      if (progress > 0.01) {
        wrapper.classList.add('active')
      } else {
        wrapper.classList.remove('active')
      }
    }

    window.addEventListener('scroll', update, { passive: true })
    window.addEventListener('resize', update, { passive: true })
    update()
  }

  function initTocOffset() {
    const toc = document.getElementById('portal-toc') as HTMLElement
    const metaRow = document.querySelector('.wp-meta-row') as HTMLElement
    if (!toc || !metaRow) return

    const offset = metaRow.offsetTop + metaRow.offsetHeight
    toc.style.marginTop = offset + 'px'
  }

  function initTocActions() {
    const metaRow = document.querySelector('.wp-meta-row') as HTMLElement
    const tocActions = document.getElementById('toc-actions')
    if (!metaRow || !tocActions) return

    const observer = new IntersectionObserver(([entry]) => {
      if (entry.isIntersecting) {
        tocActions.classList.remove('visible')
      } else {
        tocActions.classList.add('visible')
      }
    }, { threshold: 0 })

    observer.observe(metaRow)
  }

  function initPage() {
    initPortalSidebar()
    initScrollSpy()
    initResize()
    initMobileToc()
    initReadingProgress()
    initTocOffset()
    initTocActions()
  }

  document.addEventListener('DOMContentLoaded', initPage)
  document.addEventListener('astro:page-load', initPage)
</script>
