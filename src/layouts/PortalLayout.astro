---
import BaseLayout from './BaseLayout.astro'
import sohmaLogo from '../assets/images/sohma_house_logo_mockup.svg?raw'
import { articles } from '../data/articles'

interface TocItem {
  id: string
  label: string
  level: number
}

interface Props {
  title: string
  description?: string
  toc?: TocItem[]
  activeArticle?: string
}

const { title, description, toc, activeArticle } = Astro.props
---

<BaseLayout title={title} description={description}>

  <div class="portal-layout">
    <!-- Mobile header -->
    <div class="portal-mobile-header">
      <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle navigation">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
      </button>
      <a href="/" class="mobile-brand">Sohma Institute</a>
    </div>

    <!-- Left sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR — Articles -->
    <aside class="portal-sidebar-left" id="portal-sidebar">
      <div class="sidebar-inner">
        <!-- Brand -->
        <div class="sidebar-brand">
          <a href="/" class="sidebar-logo" aria-label="Sohma House" set:html={sohmaLogo} />
          <a href="/" class="sidebar-title">For Practitioners</a>
        </div>

        <!-- Article nav -->
        <nav class="sidebar-nav" aria-label="Articles">
          <span class="sidebar-section-label">Articles</span>
          {articles.map(article => (
            <a
              href={`/${article.slug}`}
              class:list={['sidebar-article-link', { active: activeArticle === article.slug }]}
            >
              <span class="sidebar-article-category">{article.category}</span>
              <span class="sidebar-article-title">{article.title}</span>
            </a>
          ))}
        </nav>
      </div>
      <div class="resize-handle resize-handle-left" id="resize-left"></div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="portal-main" id="portal-main">
      <slot />
    </main>

    <!-- RIGHT SIDEBAR — On this page (TOC) -->
    {toc && toc.length > 0 && (
      <aside class="portal-sidebar-right" id="portal-toc">
        <div class="resize-handle resize-handle-right" id="resize-right"></div>
        <div class="toc-inner">
          <nav aria-label="Table of contents">
            <ul class="toc-list">
              {toc.map(item => (
                <li class:list={[`toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="toc-link" data-toc-id={item.id}>
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  /* ===== LAYOUT SHELL ===== */
  :global(html),
  :global(body) {
    background: #f8f6f3;
  }

  .portal-layout {
    display: flex;
    min-height: 100vh;
    background: #f8f6f3;
    color: #3d3229;
  }

  /* ===== MOBILE HEADER ===== */
  .portal-mobile-header {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 56px;
    background: #fff;
    border-bottom: 1px solid rgba(0,0,0,0.08);
    align-items: center;
    padding: 0 16px;
    gap: 12px;
  }

  .sidebar-toggle {
    background: none;
    border: none;
    color: #3d3229;
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-brand {
    font-family: 'Manrope', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #3d3229;
    text-decoration: none;
    letter-spacing: 0.02em;
  }

  /* ===== LEFT SIDEBAR — Articles ===== */
  .portal-sidebar-left {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 260px;
    background: #fff;
    border-right: 1px solid rgba(0,0,0,0.08);
    z-index: 100;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(0,0,0,0.1) transparent;
  }

  .portal-sidebar-left::-webkit-scrollbar {
    width: 4px;
  }

  .portal-sidebar-left::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.1);
    border-radius: 2px;
  }

  .sidebar-inner {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    padding: 24px 0;
  }

  /* Brand */
  .sidebar-brand {
    padding: 0 20px 20px;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    margin-bottom: 20px;
  }

  .sidebar-logo {
    display: block;
    height: 32px;
    margin-bottom: 8px;
  }

  .sidebar-logo :global(svg) {
    height: 32px;
    width: auto;
    fill: #c45a42;
  }

  .sidebar-logo :global(svg path),
  .sidebar-logo :global(svg *) {
    fill: #c45a42;
  }

  .sidebar-title {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #8a7e74;
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-title:hover {
    color: #c45a42;
  }

  /* Section labels */
  .sidebar-section-label {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #a89e94;
    padding: 0 20px;
    margin-bottom: 8px;
  }

  /* Article nav */
  .sidebar-nav {
    margin-bottom: 24px;
  }

  .sidebar-article-link {
    display: block;
    padding: 8px 20px;
    text-decoration: none;
    border-left: 2px solid transparent;
    transition: all 0.15s;
  }

  .sidebar-article-link:hover {
    background: rgba(196, 90, 66, 0.04);
  }

  .sidebar-article-link.active {
    border-left-color: #c45a42;
    background: rgba(196, 90, 66, 0.06);
  }

  .sidebar-article-category {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #c45a42;
    margin-bottom: 2px;
  }

  .sidebar-article-title {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #3d3229;
    line-height: 1.4;
  }

  .sidebar-article-link.active .sidebar-article-title {
    font-weight: 600;
  }

  /* Sidebar footer */
  .sidebar-footer {
    margin-top: auto;
    padding: 20px;
    border-top: 1px solid rgba(0,0,0,0.06);
  }

  .sidebar-back {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: #8a7e74;
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-back:hover {
    color: #c45a42;
  }

  /* Left sidebar overlay (mobile) */
  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.3);
    z-index: 90;
  }

  /* ===== RIGHT SIDEBAR — TOC ===== */
  .portal-sidebar-right {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 260px;
    background: #f5f2ef;
    border-left: 1px solid rgba(0, 0, 0, 0.05);
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(0,0,0,0.08) transparent;
    z-index: 10;
  }

  .portal-sidebar-right::-webkit-scrollbar {
    width: 3px;
  }

  .portal-sidebar-right::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.08);
    border-radius: 2px;
  }

  .toc-inner {
    padding: 32px 16px 32px 0;
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }

  .toc-inner nav {
    flex: 1;
  }


  .toc-heading {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #a89e94;
    padding-left: 12px;
    margin-bottom: 12px;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-list li {
    margin: 0 0 1px;
  }

  .toc-level-1 + .toc-level-1 {
    margin-top: 4px;
  }

  .toc-level-2:first-child,
  .toc-level-1 + .toc-level-2 {
    margin-top: 2px;
  }

  .toc-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #8a7e74;
    text-decoration: none;
    padding: 5px 8px 5px 12px;
    border-left: 2px solid transparent;
    transition: all 0.15s;
    line-height: 1.45;
  }

  .toc-link:hover {
    color: #c45a42;
  }

  .toc-link.active {
    color: #c45a42;
    font-weight: 600;
    border-left-color: #c45a42;
  }

  .toc-level-2 .toc-link {
    padding-left: 22px;
    font-size: 12.5px;
    color: #a89e94;
  }

  .toc-level-2 .toc-link.active {
    color: #c45a42;
  }

  /* ===== RESIZE HANDLES ===== */
  .resize-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 5px;
    cursor: col-resize;
    z-index: 10;
    transition: background 0.2s;
  }

  .resize-handle:hover,
  .resize-handle.dragging {
    background: rgba(196, 90, 66, 0.15);
  }

  .resize-handle-left {
    right: 0;
  }

  .resize-handle-right {
    left: 0;
  }

  /* ===== MAIN CONTENT ===== */
  .portal-main {
    flex: 1;
    margin-left: 260px;
    margin-right: 220px;
    min-height: 100vh;
  }

  /* When no TOC (e.g. index page) — content uses full width after left sidebar */
  .portal-main:last-child {
    margin-right: 0;
  }

  /* ===== RESPONSIVE ===== */

  /* Hide right TOC below 1280px — content fills right side */
  @media (max-width: 1280px) {
    .portal-sidebar-right {
      display: none;
    }

    .portal-main {
      margin-right: 0;
    }
  }

  /* Collapse left sidebar to hamburger below 1024px */
  @media (max-width: 1024px) {
    .portal-mobile-header {
      display: flex;
    }

    .portal-sidebar-left {
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      box-shadow: none;
    }

    .portal-sidebar-left.open {
      transform: translateX(0);
      box-shadow: 4px 0 24px rgba(0,0,0,0.1);
    }

    .sidebar-overlay.visible {
      display: block;
    }

    .portal-main {
      margin-left: 0;
      padding-top: 56px;
    }
  }

  @media (max-width: 640px) {
    .portal-sidebar-left {
      width: 300px;
    }
  }
</style>

<script>
  function initPortalSidebar() {
    const toggle = document.getElementById('sidebar-toggle')
    const sidebar = document.getElementById('portal-sidebar')
    const overlay = document.getElementById('sidebar-overlay')
    if (!toggle || !sidebar || !overlay) return

    function openSidebar() {
      sidebar.classList.add('open')
      overlay.classList.add('visible')
      document.body.style.overflow = 'hidden'
    }

    function closeSidebar() {
      sidebar.classList.remove('open')
      overlay.classList.remove('visible')
      document.body.style.overflow = ''
    }

    toggle.addEventListener('click', () => {
      sidebar.classList.contains('open') ? closeSidebar() : openSidebar()
    })

    overlay.addEventListener('click', closeSidebar)

    // Close sidebar on link click (mobile)
    sidebar.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 1024) closeSidebar()
      })
    })
  }

  // Scroll-spy for right TOC
  function initScrollSpy() {
    const tocLinks = document.querySelectorAll('.toc-link[data-toc-id]')
    if (tocLinks.length === 0) return

    const ids = Array.from(tocLinks).map(el => (el as HTMLElement).dataset.tocId!)
    const sections = ids.map(id => document.getElementById(id)).filter(Boolean) as HTMLElement[]
    if (sections.length === 0) return

    let activeId = ''

    function updateActive() {
      const scrollTop = window.scrollY + 120
      let currentId = sections[0]?.id || ''

      for (const section of sections) {
        if (section.offsetTop <= scrollTop) {
          currentId = section.id
        }
      }

      if (currentId !== activeId) {
        activeId = currentId
        tocLinks.forEach(link => {
          const el = link as HTMLElement
          if (el.dataset.tocId === activeId) {
            el.classList.add('active')
          } else {
            el.classList.remove('active')
          }
        })
      }
    }

    window.addEventListener('scroll', updateActive, { passive: true })
    updateActive()
  }

  // Drag-to-resize sidebars
  function initResize() {
    const leftSidebar = document.getElementById('portal-sidebar') as HTMLElement
    const rightSidebar = document.getElementById('portal-toc') as HTMLElement
    const main = document.getElementById('portal-main') as HTMLElement
    const resizeLeft = document.getElementById('resize-left')
    const resizeRight = document.getElementById('resize-right')

    function setupDrag(handle: HTMLElement | null, sidebar: HTMLElement | null, side: 'left' | 'right') {
      if (!handle || !sidebar) return

      let startX = 0
      let startWidth = 0

      function onMouseDown(e: MouseEvent) {
        e.preventDefault()
        startX = e.clientX
        startWidth = sidebar.getBoundingClientRect().width
        handle.classList.add('dragging')
        document.body.style.cursor = 'col-resize'
        document.body.style.userSelect = 'none'
        document.addEventListener('mousemove', onMouseMove)
        document.addEventListener('mouseup', onMouseUp)
      }

      function onMouseMove(e: MouseEvent) {
        const delta = side === 'left' ? e.clientX - startX : startX - e.clientX
        const newWidth = Math.max(180, Math.min(400, startWidth + delta))
        sidebar.style.width = newWidth + 'px'
        if (main) {
          if (side === 'left') main.style.marginLeft = newWidth + 'px'
          else main.style.marginRight = newWidth + 'px'
        }
      }

      function onMouseUp() {
        handle.classList.remove('dragging')
        document.body.style.cursor = ''
        document.body.style.userSelect = ''
        document.removeEventListener('mousemove', onMouseMove)
        document.removeEventListener('mouseup', onMouseUp)
      }

      handle.addEventListener('mousedown', onMouseDown)
    }

    setupDrag(resizeLeft, leftSidebar, 'left')
    setupDrag(resizeRight, rightSidebar, 'right')
  }

  document.addEventListener('DOMContentLoaded', () => {
    initPortalSidebar()
    initScrollSpy()
    initResize()
  })

  document.addEventListener('astro:page-load', () => {
    initPortalSidebar()
    initScrollSpy()
    initResize()
  })
</script>
