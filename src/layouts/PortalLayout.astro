---
import BaseLayout from './BaseLayout.astro'
import sohmaLogo from '../assets/images/sohma_practitioners_logo.svg?raw'
import { articles, getArticlesByCategory } from '../data/articles'

interface TocItem {
  id: string
  label: string
  level: number
}

interface Props {
  title: string
  description?: string
  toc?: TocItem[]
  activeArticle?: string
}

const { title, description, toc, activeArticle } = Astro.props

const articleGroups = getArticlesByCategory()
const activeCategory = activeArticle
  ? articles.find(a => a.slug === activeArticle)?.category
  : null

const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/'
---

<BaseLayout title={title} description={description}>

  <div class="portal-layout">
    <!-- Mobile header -->
    <div class="portal-mobile-header">
      <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
      </button>
      <div class="mobile-brand">
        <div class="mobile-brand-top">
          <a href="/" class="mobile-logo" set:html={sohmaLogo} />
          <a href="/" class="mobile-institute">.INSTITUTE</a>
        </div>
        <span class="mobile-subtitle">FOR PRACTITIONERS</span>
      </div>
    </div>

    <!-- Left sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR — Articles -->
    <aside class="portal-sidebar-left" id="portal-sidebar" transition:animate="none">
      <button class="sidebar-close" id="sidebar-close" aria-label="Close navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
          <path d="M18 6L6 18M6 6l12 12" />
        </svg>
      </button>
      <div class="sidebar-inner">
        <!-- Brand -->
        <div class="sidebar-brand">
          <div class="sidebar-brand-top">
            <a href="/" class="sidebar-logo" aria-label="Sohma House" set:html={sohmaLogo} />
            <a href="/" class="sidebar-title">.INSTITUTE</a>
          </div>
          <span class="sidebar-subtitle">FOR PRACTITIONERS</span>
        </div>

        <!-- Section nav -->
        <nav class="sidebar-nav" aria-label="Navigation">
          <div class="sidebar-dropdown" id="sidebar-education">
            <a href="/education" class:list={['sidebar-nav-link sidebar-dropdown-toggle-link', { active: currentPath.startsWith('/education') }]}>Education</a>
            <div class="sidebar-dropdown-items">
              <a href="/education/foundation-certificate" class:list={['sidebar-sub-link', { active: currentPath === '/education/foundation-certificate' }]}>Foundation Certificate</a>
              <a href="/education/advanced-diploma" class:list={['sidebar-sub-link', { active: currentPath === '/education/advanced-diploma' }]}>Advanced Diploma</a>
              <a href="/education/graduate-diploma" class:list={['sidebar-sub-link', { active: currentPath === '/education/graduate-diploma' }]}>Graduate Diploma</a>
              <a href="/education/fellowship" class:list={['sidebar-sub-link', { active: currentPath === '/education/fellowship' }]}>Fellowship</a>
              <a href="/education/pedagogy" class:list={['sidebar-sub-link', { active: currentPath === '/education/pedagogy' }]}>Pedagogy</a>
            </div>
          </div>
          <a href="/research" class:list={['sidebar-nav-link', { active: currentPath === '/research' }]}>Research</a>

          <a href="/whitepapers" class:list={['sidebar-nav-link', { active: !!activeArticle || currentPath.startsWith('/whitepapers') }]}>Whitepapers</a>

          <a href="/network" class:list={['sidebar-nav-link', { active: currentPath === '/network' }]}>Network</a>
          <a href="/publishing" class:list={['sidebar-nav-link', { active: currentPath === '/publishing' }]}>Publishing</a>

          <div class="sidebar-dropdown" id="sidebar-about">
            <a href="/about" class:list={['sidebar-nav-link sidebar-dropdown-toggle-link', { active: currentPath === '/about' || currentPath === '/sustainability' }]}>About</a>
            <div class="sidebar-dropdown-items">
              <a href="/sustainability" class:list={['sidebar-sub-link', { active: currentPath === '/sustainability' }]}>Financial Transparency</a>
            </div>
          </div>
        </nav>

        <!-- Footer with theme toggle -->
        <div class="sidebar-footer">
          <div class="sidebar-footer-row">
            <a href="https://sohma.house" target="_blank" rel="noopener noreferrer" class="sidebar-home-link">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
              <span>sohma.house</span>
            </a>
            <div class="sidebar-footer-icons">
              <a href="https://www.linkedin.com/company/sohma-house" target="_blank" rel="noopener noreferrer" class="sidebar-icon-btn" aria-label="LinkedIn" title="LinkedIn">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
              </a>
              <button class="theme-toggle" id="theme-toggle" type="button" aria-label="Toggle nightshift mode" title="Toggle nightshift mode">
                <svg class="theme-icon-sun" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
                <svg class="theme-icon-moon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="resize-handle resize-handle-left" id="resize-left"></div>
    </aside>

    <!-- READING PROGRESS -->
    <div class="reading-progress" id="reading-progress" aria-hidden="true">
      <div class="reading-progress-h" id="reading-progress-h"></div>
      <div class="reading-progress-v" id="reading-progress-v"></div>
    </div>

    <!-- MAIN CONTENT -->
    <main class="portal-main" id="portal-main">
      {toc && toc.length > 0 && (
        <div class="mobile-toc" id="mobile-toc">
          <button class="mobile-toc-toggle" id="mobile-toc-toggle" type="button" aria-expanded="false">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="8" y1="6" x2="21" y2="6" />
              <line x1="8" y1="12" x2="21" y2="12" />
              <line x1="8" y1="18" x2="21" y2="18" />
              <line x1="3" y1="6" x2="3.01" y2="6" />
              <line x1="3" y1="12" x2="3.01" y2="12" />
              <line x1="3" y1="18" x2="3.01" y2="18" />
            </svg>
            <span>On this page</span>
            <svg class="mobile-toc-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9" />
            </svg>
          </button>
          <nav class="mobile-toc-list" id="mobile-toc-list" aria-label="Table of contents">
            <ul>
              {toc.map(item => (
                <li class:list={[`mobile-toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="mobile-toc-link">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
          <div class="mobile-toc-dots">
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
          </div>
        </div>
      )}
      <slot />
    </main>

    <!-- RIGHT SIDEBAR — On this page (TOC) -->
    {toc && toc.length > 0 && (
      <aside class="portal-sidebar-right" id="portal-toc">
        <div class="resize-handle resize-handle-right" id="resize-right"></div>
        <div class="toc-inner">
          <nav aria-label="Table of contents">
            <ul class="toc-list">
              {toc.map(item => (
                <li class:list={[`toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="toc-link" data-toc-id={item.id}>
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  /* ===== LAYOUT SHELL ===== */
  :global(html),
  :global(body) {
    background: var(--bg-base);
  }

  .portal-layout {
    display: flex;
    min-height: 100vh;
    background: var(--bg-base);
    color: var(--text-heading);
  }

  /* ===== MOBILE HEADER ===== */
  .portal-mobile-header {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 56px;
    background: var(--bg-surface);
    border-bottom: 1px solid var(--border-medium);
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    gap: 12px;
  }

  .sidebar-toggle {
    background: none;
    border: none;
    color: var(--accent);
    order: 1;
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .mobile-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    text-decoration: none;
  }

  .mobile-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 900;
    letter-spacing: 0.12em;
    color: var(--accent-darker);
    -webkit-text-stroke: 0.4px var(--accent-darker);
  }

  .mobile-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .mobile-logo :global(svg) {
    height: 16px;
    width: auto;
  }

  .mobile-logo :global(svg path),
  .mobile-logo :global(svg *) {
    fill: var(--accent);
  }

  .mobile-institute {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-faint);
    line-height: 1;
    margin-bottom: -1px;
  }

  /* ===== LEFT SIDEBAR — Articles ===== */
  .portal-sidebar-left {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 260px;
    background: var(--bg-sidebar);
    border-right: 1px solid var(--border-light);
    z-index: 100;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--scrollbar-thumb) transparent;
  }

  .portal-sidebar-left::-webkit-scrollbar {
    width: 4px;
  }

  .portal-sidebar-left::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb);
    border-radius: 2px;
  }

  .sidebar-close {
    display: none;
    position: absolute;
    top: 14px;
    right: 16px;
    z-index: 10;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 4px;
    align-items: center;
    justify-content: center;
  }

  .sidebar-inner {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    padding: 24px 0;
  }

  /* Brand */
  .sidebar-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding: 0 20px 20px;
    border-bottom: 1px solid var(--border-medium);
    margin-bottom: 20px;
  }

  .sidebar-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
  }

  .sidebar-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--text-link);
  }

  .sidebar-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .sidebar-logo :global(svg) {
    height: 18px;
    width: auto;
    fill: var(--text-heading);
  }

  .sidebar-logo :global(svg path),
  .sidebar-logo :global(svg *) {
    fill: var(--text-heading);
  }

  .sidebar-title {
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-heading);
    line-height: 1;
    margin-bottom: -1px;
    text-decoration: none;
    transition: color 0.2s;
    white-space: nowrap;
  }

  .sidebar-title:hover {
    color: var(--text-link);
  }

  /* Section nav */
  .sidebar-nav {
    margin-bottom: 24px;
  }

  .sidebar-nav-link {
    display: block;
    font-family: 'Cormorant Garamond', serif;
    font-size: 25px;
    font-weight: 400;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 10px 20px;
    transition: color 0.15s, background 0.15s;
  }

  .sidebar-nav-link:hover {
    color: var(--text-heading);
    background: var(--bg-card);
  }

  .sidebar-nav-link.active {
    color: var(--accent-dark);
    background: var(--accent-active-bg);
    border-left: 3px solid var(--accent-dark);
    padding-left: 17px;
  }

  /* Dropdown */
  .sidebar-dropdown-title {
    color: inherit;
    text-decoration: none;
    font: inherit;
  }

  .sidebar-dropdown {
    position: relative;
  }

  .sidebar-dropdown-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
  }

  .sidebar-dropdown-toggle-link {
    display: block;
    cursor: pointer;
  }
  .sidebar-dropdown-toggle-link.active {
    color: var(--text-heading);
  }

  .sidebar-dropdown-chevron {
    color: var(--text-tertiary);
    flex-shrink: 0;
    transition: transform 0.2s;
  }

  .sidebar-dropdown.open .sidebar-dropdown-chevron {
    transform: rotate(180deg);
  }

  .sidebar-dropdown-items {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease;
    padding-top: 0;
    padding-bottom: 0;
  }

  .sidebar-dropdown.open .sidebar-dropdown-items {
    padding-top: 8px;
    padding-bottom: 12px;
  }

  .sidebar-dropdown.open .sidebar-dropdown-items {
    max-height: 400px;
  }

  .sidebar-sub-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: var(--text-link);
    text-decoration: none;
    padding: 6px 20px 6px 32px;
    transition: color 0.15s, background 0.15s;
  }

  .sidebar-sub-link:hover {
    color: var(--text-heading);
    background: var(--bg-card);
  }

  .sidebar-sub-link.active {
    color: var(--text-heading);
    font-weight: 600;
  }

  /* Sidebar footer */
  .sidebar-footer {
    margin-top: auto;
    padding: 20px;
    border-top: 1px solid var(--border-medium);
  }

  .sidebar-back {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-back:hover {
    color: var(--accent);
  }

  .sidebar-footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .sidebar-footer-icons {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .sidebar-icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-tertiary);
    cursor: pointer;
    transition: color 0.2s, background 0.2s, border-color 0.2s;
    text-decoration: none;
  }

  .sidebar-icon-btn:hover {
    color: var(--text-heading);
    background: var(--bg-card-hover);
    border-color: var(--border-medium);
  }

  .sidebar-home-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-home-link:hover {
    color: var(--accent);
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-tertiary);
    cursor: pointer;
    transition: color 0.2s, background 0.2s, border-color 0.2s;
  }

  .theme-toggle:hover {
    color: var(--text-heading);
    background: var(--bg-card-hover);
    border-color: var(--border-medium);
  }

  /* Show sun in dark mode, moon in light mode */
  .theme-icon-sun { display: none; }
  .theme-icon-moon { display: block; }
  :global([data-theme="dark"]) .theme-icon-sun { display: block; }
  :global([data-theme="dark"]) .theme-icon-moon { display: none; }

  /* Left sidebar overlay (mobile) */
  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: var(--overlay-bg);
    z-index: 90;
  }

  /* ===== RIGHT SIDEBAR — TOC ===== */
  .portal-sidebar-right {
    position: sticky;
    top: 0;
    align-self: flex-start;
    width: 260px;
    flex-shrink: 0;
    height: 100vh;
    background: var(--bg-sidebar-right);
    border-left: 1px solid var(--border-light);
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--scrollbar-thumb-light) transparent;
    z-index: 10;
  }

  .portal-sidebar-right::-webkit-scrollbar {
    width: 3px;
  }

  .portal-sidebar-right::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb-light);
    border-radius: 2px;
  }

  .toc-inner {
    padding: 32px 16px 32px 0;
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }

  .toc-inner nav {
    flex: 1;
  }


  .toc-heading {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-muted);
    padding-left: 12px;
    margin-bottom: 12px;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-list li {
    margin: 0 0 1px;
  }

  .toc-level-1 + .toc-level-1 {
    margin-top: 4px;
  }

  .toc-level-2:first-child,
  .toc-level-1 + .toc-level-2 {
    margin-top: 2px;
  }

  .toc-level-2 {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.25s ease, opacity 0.2s ease;
  }

  .toc-level-2.toc-sub-visible {
    max-height: 2.5rem;
    opacity: 1;
  }

  .toc-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: var(--text-tertiary);
    text-decoration: none;
    padding: 5px 8px 5px 12px;
    border-left: 2px solid transparent;
    transition: all 0.15s;
    line-height: 1.45;
  }

  .toc-link:hover {
    color: var(--accent);
  }

  .toc-link.active {
    color: var(--accent);
    font-weight: 600;
    border-left-color: var(--accent);
  }

  .toc-level-2 .toc-link {
    padding-left: 22px;
    font-size: 12.5px;
    color: var(--text-muted);
  }

  .toc-level-2 .toc-link.active {
    color: var(--accent);
  }

  /* ===== MOBILE TOC ===== */
  .mobile-toc {
    display: none;
  }

  @media (max-width: 1280px) {
    .mobile-toc {
      display: block;
      margin: 0 0 1.5rem;
      padding-top: 1rem;
    }
  }

  @media (max-width: 1024px) {
    .mobile-toc {
      margin: 0 0 1.5rem;
      padding-top: 1rem;
    }
  }

  .mobile-toc-toggle {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
    padding: 12px 16px;
    background: transparent;
    border: 1px solid var(--border-toc);
    border-radius: 8px;
    cursor: pointer;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: var(--text-heading);
    transition: border-color 0.2s;
  }

  .mobile-toc-toggle:hover,
  .mobile-toc-toggle:focus,
  .mobile-toc-toggle:active {
    border-color: var(--border-toc);
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .mobile-toc-toggle svg:first-child {
    color: var(--text-tertiary);
    flex-shrink: 0;
  }

  .mobile-toc-toggle span {
    flex: 1;
    text-align: left;
  }

  .mobile-toc-chevron {
    flex-shrink: 0;
    color: var(--text-faint);
    transition: transform 0.2s;
  }

  .mobile-toc.open .mobile-toc-chevron {
    transform: rotate(180deg);
  }

  .mobile-toc-list {
    max-height: 0;
