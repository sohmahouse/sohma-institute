---
import BaseLayout from './BaseLayout.astro'
import sohmaLogo from '../assets/images/sohma_practitioners_logo.svg?raw'
import { articles, getArticlesByCategory } from '../data/articles'

interface TocItem {
  id: string
  label: string
  level: number
}

interface Props {
  title: string
  description?: string
  toc?: TocItem[]
  activeArticle?: string
}

const { title, description, toc, activeArticle } = Astro.props

const articleGroups = getArticlesByCategory()
const activeCategory = activeArticle
  ? articles.find(a => a.slug === activeArticle)?.category
  : null
---

<BaseLayout title={title} description={description}>

  <div class="portal-layout">
    <!-- Mobile header -->
    <div class="portal-mobile-header">
      <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
      </button>
      <div class="mobile-brand">
        <div class="mobile-brand-top">
          <a href="/" class="mobile-logo" set:html={sohmaLogo} />
          <a href="/" class="mobile-institute">.INSTITUTE</a>
        </div>
        <span class="mobile-subtitle">FOR PRACTITIONERS</span>
      </div>
    </div>

    <!-- Left sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR — Articles -->
    <aside class="portal-sidebar-left" id="portal-sidebar">
      <button class="sidebar-close" id="sidebar-close" aria-label="Close navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
          <path d="M18 6L6 18M6 6l12 12" />
        </svg>
      </button>
      <div class="sidebar-inner">
        <!-- Brand -->
        <div class="sidebar-brand">
          <div class="sidebar-brand-top">
            <a href="/" class="sidebar-logo" aria-label="Sohma House" set:html={sohmaLogo} />
            <a href="/" class="sidebar-title">.INSTITUTE</a>
          </div>
          <span class="sidebar-subtitle">FOR PRACTITIONERS</span>
        </div>

        <!-- Home link -->
        <a href="/" class:list={['sidebar-home-link', { active: !activeArticle }]}>
          <span class="sidebar-home-name">All Resources</span>
        </a>

        <!-- Article nav grouped by category -->
        <nav class="sidebar-nav" aria-label="Articles">
          {articleGroups.map(group => (
            <div
              class="sidebar-category-group"
              data-category={group.meta.name}
              data-expanded={activeCategory === group.meta.name ? 'true' : 'false'}
            >
              <button class="sidebar-category-header" type="button" aria-expanded={activeCategory === group.meta.name ? 'true' : 'false'}>
                <span class="sidebar-category-name">{group.meta.name}</span>
                <span class="sidebar-category-count">{group.articles.length}</span>
                <svg class="sidebar-category-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="6 9 12 15 18 9" />
                </svg>
              </button>
              <div class="sidebar-category-articles">
                {group.articles.map(article => (
                  <a
                    href={`/${article.slug}`}
                    class:list={['sidebar-article-link', { active: activeArticle === article.slug }]}
                  >
                    <svg class="sidebar-article-icon" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                      <polyline points="14 2 14 8 20 8" />
                    </svg>
                    <span class="sidebar-article-title">{article.title}</span>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </nav>
      </div>
      <div class="resize-handle resize-handle-left" id="resize-left"></div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="portal-main" id="portal-main">
      {toc && toc.length > 0 && (
        <div class="mobile-toc" id="mobile-toc">
          <button class="mobile-toc-toggle" id="mobile-toc-toggle" type="button" aria-expanded="false">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="8" y1="6" x2="21" y2="6" />
              <line x1="8" y1="12" x2="21" y2="12" />
              <line x1="8" y1="18" x2="21" y2="18" />
              <line x1="3" y1="6" x2="3.01" y2="6" />
              <line x1="3" y1="12" x2="3.01" y2="12" />
              <line x1="3" y1="18" x2="3.01" y2="18" />
            </svg>
            <span>On this page</span>
            <svg class="mobile-toc-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9" />
            </svg>
          </button>
          <nav class="mobile-toc-list" id="mobile-toc-list" aria-label="Table of contents">
            <ul>
              {toc.map(item => (
                <li class:list={[`mobile-toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="mobile-toc-link">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
          <div class="mobile-toc-dots">
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
          </div>
        </div>
      )}
      <slot />
    </main>

    <!-- RIGHT SIDEBAR — On this page (TOC) -->
    {toc && toc.length > 0 && (
      <aside class="portal-sidebar-right" id="portal-toc">
        <div class="resize-handle resize-handle-right" id="resize-right"></div>
        <div class="toc-inner">
          <nav aria-label="Table of contents">
            <ul class="toc-list">
              {toc.map(item => (
                <li class:list={[`toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="toc-link" data-toc-id={item.id}>
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  /* ===== LAYOUT SHELL ===== */
  :global(html),
  :global(body) {
    background: #f8f6f3;
  }

  .portal-layout {
    display: flex;
    min-height: 100vh;
    background: #f8f6f3;
    color: #3d3229;
  }

  /* ===== MOBILE HEADER ===== */
  .portal-mobile-header {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 56px;
    background: #fff;
    border-bottom: 1px solid rgba(0,0,0,0.08);
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    gap: 12px;
  }

  .sidebar-toggle {
    background: none;
    border: none;
    color: #c45a42;
    order: 1;
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .mobile-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    text-decoration: none;
  }

  .mobile-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 900;
    letter-spacing: 0.12em;
    color: #9e3a2e;
    -webkit-text-stroke: 0.4px #9e3a2e;
  }

  .mobile-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .mobile-logo :global(svg) {
    height: 16px;
    width: auto;
  }

  .mobile-logo :global(svg path),
  .mobile-logo :global(svg *) {
    fill: #c45a42;
  }

  .mobile-institute {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #b8afa7;
    line-height: 1;
    margin-bottom: -1px;
  }

  /* ===== LEFT SIDEBAR — Articles ===== */
  .portal-sidebar-left {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 300px;
    background: #fff;
    border-right: 1px solid rgba(0,0,0,0.08);
    z-index: 100;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(0,0,0,0.1) transparent;
  }

  .portal-sidebar-left::-webkit-scrollbar {
    width: 4px;
  }

  .portal-sidebar-left::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.1);
    border-radius: 2px;
  }

  .sidebar-close {
    display: none;
    position: absolute;
    top: 14px;
    right: 16px;
    z-index: 10;
    background: none;
    border: none;
    color: #c45a42;
    cursor: pointer;
    padding: 4px;
    align-items: center;
    justify-content: center;
  }

  .sidebar-inner {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    padding: 24px 0;
  }

  /* Brand */
  .sidebar-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding: 0 20px 20px;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    margin-bottom: 20px;
  }

  .sidebar-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
  }

  .sidebar-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 900;
    letter-spacing: 0.12em;
    color: #9e3a2e;
    -webkit-text-stroke: 0.4px #9e3a2e;
  }

  .sidebar-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .sidebar-logo :global(svg) {
    height: 16px;
    width: auto;
    fill: #c45a42;
  }

  .sidebar-logo :global(svg path),
  .sidebar-logo :global(svg *) {
    fill: #c45a42;
  }

  .sidebar-title {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #b8afa7;
    line-height: 1;
    margin-bottom: -1px;
    text-decoration: none;
    transition: color 0.2s;
    white-space: nowrap;
  }

  .sidebar-title:hover {
    color: #c45a42;
  }

  /* Home link — styled like category header */
  .sidebar-home-link {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 7px 20px;
    margin-bottom: 2px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .sidebar-home-link:hover {
    background: rgba(0,0,0,0.02);
  }

  .sidebar-home-link.active .sidebar-home-name {
    color: #c45a42;
  }

  .sidebar-home-name {
    font-family: 'Manrope', sans-serif;
    font-size: 11.5px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #8a7e74;
  }

  /* Article nav */
  .sidebar-nav {
    margin-bottom: 24px;
  }

  /* Category groups */
  .sidebar-category-group {
    margin-bottom: 2px;
  }

  .sidebar-category-header {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 7px 20px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background 0.15s;
    gap: 6px;
  }

  .sidebar-category-header:hover {
    background: rgba(0,0,0,0.02);
  }

  .sidebar-category-name {
    font-family: 'Manrope', sans-serif;
    font-size: 11.5px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #8a7e74;
    flex: 1;
  }

  .sidebar-category-count {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 600;
    color: #b8afa7;
    background: rgba(0,0,0,0.04);
    padding: 2px 7px;
    border-radius: 10px;
    min-width: 20px;
    text-align: center;
  }

  .sidebar-category-chevron {
    flex-shrink: 0;
    color: #b8afa7;
    transition: transform 0.2s;
  }

  .sidebar-category-group[data-expanded="true"] .sidebar-category-chevron {
    transform: rotate(0deg);
  }

  .sidebar-category-group[data-expanded="false"] .sidebar-category-chevron {
    transform: rotate(-90deg);
  }

  .sidebar-category-articles {
    overflow: hidden;
    transition: max-height 0.25s ease, opacity 0.2s ease;
  }

  .sidebar-category-group[data-expanded="false"] .sidebar-category-articles {
    max-height: 0;
    opacity: 0;
    pointer-events: none;
  }

  .sidebar-category-group[data-expanded="true"] .sidebar-category-articles {
    max-height: 500px;
    opacity: 1;
  }

  .sidebar-article-link {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 5px 20px 5px 28px;
    text-decoration: none;
    border-left: 2px solid transparent;
    transition: all 0.15s;
  }

  .sidebar-article-link:hover {
    background: rgba(196, 90, 66, 0.04);
  }

  .sidebar-article-link.active {
    border-left-color: #c45a42;
    background: rgba(196, 90, 66, 0.06);
  }

  .sidebar-article-icon {
    flex-shrink: 0;
    color: #b8afa7;
    opacity: 0.7;
  }

  .sidebar-article-link.active .sidebar-article-icon,
  .sidebar-article-link:hover .sidebar-article-icon {
    color: #c45a42;
    opacity: 1;
  }

  .sidebar-article-title {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: #8a7e74;
    line-height: 1.4;
  }

  .sidebar-article-link.active .sidebar-article-title {
    font-weight: 600;
    color: #c45a42;
  }

  /* Sidebar footer */
  .sidebar-footer {
    margin-top: auto;
    padding: 20px;
    border-top: 1px solid rgba(0,0,0,0.06);
  }

  .sidebar-back {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: #8a7e74;
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-back:hover {
    color: #c45a42;
  }

  /* Left sidebar overlay (mobile) */
  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.3);
    z-index: 90;
  }

  /* ===== RIGHT SIDEBAR — TOC ===== */
  .portal-sidebar-right {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 260px;
    background: #f5f2ef;
    border-left: 1px solid rgba(0, 0, 0, 0.05);
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(0,0,0,0.08) transparent;
    z-index: 10;
  }

  .portal-sidebar-right::-webkit-scrollbar {
    width: 3px;
  }

  .portal-sidebar-right::-webkit-scrollbar-thumb {
    background: rgba(0,0,0,0.08);
    border-radius: 2px;
  }

  .toc-inner {
    padding: 32px 16px 32px 0;
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }

  .toc-inner nav {
    flex: 1;
  }


  .toc-heading {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #a89e94;
    padding-left: 12px;
    margin-bottom: 12px;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-list li {
    margin: 0 0 1px;
  }

  .toc-level-1 + .toc-level-1 {
    margin-top: 4px;
  }

  .toc-level-2:first-child,
  .toc-level-1 + .toc-level-2 {
    margin-top: 2px;
  }

  .toc-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #8a7e74;
    text-decoration: none;
    padding: 5px 8px 5px 12px;
    border-left: 2px solid transparent;
    transition: all 0.15s;
    line-height: 1.45;
  }

  .toc-link:hover {
    color: #c45a42;
  }

  .toc-link.active {
    color: #c45a42;
    font-weight: 600;
    border-left-color: #c45a42;
  }

  .toc-level-2 .toc-link {
    padding-left: 22px;
    font-size: 12.5px;
    color: #a89e94;
  }

  .toc-level-2 .toc-link.active {
    color: #c45a42;
  }

  /* ===== MOBILE TOC ===== */
  .mobile-toc {
    display: none;
  }

  @media (max-width: 1280px) {
    .mobile-toc {
      display: block;
      margin: 0 0 1.5rem;
      padding-top: 1rem;
    }
  }

  @media (max-width: 1024px) {
    .mobile-toc {
      margin: 0 0 1.5rem;
      padding-top: 1rem;
    }
  }

  .mobile-toc-toggle {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
    padding: 12px 16px;
    background: transparent;
    border: 1px solid #e8e4e0;
    border-radius: 8px;
    cursor: pointer;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 600;
    color: #3d3229;
    transition: border-color 0.2s;
  }

  .mobile-toc-toggle:hover,
  .mobile-toc-toggle:focus,
  .mobile-toc-toggle:active {
    border-color: #e8e4e0;
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .mobile-toc-toggle svg:first-child {
    color: #8a7e74;
    flex-shrink: 0;
  }

  .mobile-toc-toggle span {
    flex: 1;
    text-align: left;
  }

  .mobile-toc-chevron {
    flex-shrink: 0;
    color: #b8afa7;
    transition: transform 0.2s;
  }

  .mobile-toc.open .mobile-toc-chevron {
    transform: rotate(180deg);
  }

  .mobile-toc-list {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: transparent;
    border: 1px solid #e8e4e0;
    border-top: none;
    border-radius: 0 0 8px 8px;
    margin-top: -1px;
  }

  .mobile-toc.open .mobile-toc-list {
    max-height: 600px;
  }

  .mobile-toc.open .mobile-toc-toggle {
    border-radius: 8px 8px 0 0;
    border-bottom-color: transparent;
  }

  .mobile-toc-list ul {
    list-style: none;
    padding: 8px 0;
    margin: 0;
  }

  .mobile-toc-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #8a7e74;
    text-decoration: none;
    padding: 8px 16px;
    transition: color 0.15s, background 0.15s;
  }

  .mobile-toc-link:hover {
    color: #c45a42;
    background: rgba(196, 90, 66, 0.04);
  }

  .mobile-toc-level-2 .mobile-toc-link {
    padding-left: 28px;
    font-size: 12.5px;
    color: #a89e94;
  }

  /* ===== MOBILE TOC DOTS ===== */
  .mobile-toc-dots {
    display: none;
  }

  @media (max-width: 1280px) {
    .mobile-toc-dots {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.75rem;
      padding: 2.5rem 0;
    }
  }

  .mobile-toc-dot {
    display: block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #c45a42;
    opacity: 0.3;
    animation: mobileDotPulse 3s ease-in-out infinite;
  }

  .mobile-toc-dot:nth-child(2) {
    animation-delay: 0.4s;
  }

  .mobile-toc-dot:nth-child(3) {
    animation-delay: 0.8s;
  }

  @keyframes mobileDotPulse {
    0%, 100% { transform: scale(1); opacity: 0.3; background: #687C57; }
    25% { transform: scale(1.4); opacity: 0.7; background: #576943; }
    50% { transform: scale(1); opacity: 0.5; background: #A53D2E; }
    75% { transform: scale(1.4); opacity: 0.7; background: #8E2A22; }
  }

  /* ===== RESIZE HANDLES ===== */
  .resize-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 5px;
    cursor: col-resize;
    z-index: 10;
    transition: background 0.2s;
  }

  .resize-handle:hover,
  .resize-handle.dragging {
    background: rgba(196, 90, 66, 0.15);
  }

  .resize-handle-left {
    right: 0;
  }

  .resize-handle-right {
    left: 0;
  }

  /* ===== MAIN CONTENT ===== */
  .portal-main {
    flex: 1;
    margin-left: 300px;
    margin-right: 220px;
    min-height: 100vh;
  }

  /* When no TOC (e.g. index page) — content uses full width after left sidebar */
  .portal-main:last-child {
    margin-right: 0;
  }

  /* ===== RESPONSIVE ===== */

  /* Hide right TOC below 1280px — content fills right side */
  @media (max-width: 1280px) {
    .portal-sidebar-right {
      display: none;
    }

    .portal-main {
      margin-right: 0;
    }
  }

  /* Collapse left sidebar to hamburger below 1024px */
  @media (max-width: 1024px) {
    .portal-mobile-header {
      display: flex;
    }

    .portal-sidebar-left {
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      box-shadow: none;
    }

    .portal-sidebar-left.open {
      transform: translateX(0);
      box-shadow: 4px 0 24px rgba(0,0,0,0.1);
    }

    .sidebar-overlay.visible {
      display: block;
    }

    .sidebar-close {
      display: flex;
    }

    .portal-main {
