---
import BaseLayout from './BaseLayout.astro'
import PasswordGate from '../components/PasswordGate.astro'
import sohmaLogo from '../assets/images/sohma_practitioners_logo.svg?raw'
import { articles, getArticlesByCategory } from '../data/articles'

interface TocItem {
  id: string
  label: string
  level: number
}

interface Props {
  title: string
  description?: string
  toc?: TocItem[]
  activeArticle?: string
}

const { title, description, toc, activeArticle } = Astro.props

const articleGroups = getArticlesByCategory()
const activeCategory = activeArticle
  ? articles.find(a => a.slug === activeArticle)?.category
  : null

const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/'
---

<BaseLayout title={title} description={description}>
  <PasswordGate password="sohma2026" storageKey="sohma-institute-access" />

  <div class="portal-layout">
    <!-- Mobile header -->
    <div class="portal-mobile-header">
      <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M3 12h18M3 6h18M3 18h18" />
        </svg>
      </button>
      <div class="mobile-brand">
        <div class="mobile-brand-top">
          <a href="/" class="mobile-logo" set:html={sohmaLogo} />
          <a href="/" class="mobile-institute">.INSTITUTE</a>
        </div>
        <span class="mobile-subtitle">FOR PRACTITIONERS</span>
      </div>
    </div>

    <!-- Left sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR — Articles -->
    <aside class="portal-sidebar-left" id="portal-sidebar" transition:animate="none">
      <button class="sidebar-close" id="sidebar-close" aria-label="Close navigation">
        <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
          <path d="M18 6L6 18M6 6l12 12" />
        </svg>
      </button>
      <div class="sidebar-inner">
        <!-- Brand -->
        <div class="sidebar-brand">
          <div class="sidebar-brand-top">
            <a href="/" class="sidebar-logo" aria-label="Sohma House" set:html={sohmaLogo} />
            <a href="/" class="sidebar-title">.INSTITUTE</a>
          </div>
          <span class="sidebar-subtitle">FOR PRACTITIONERS</span>
        </div>

        <!-- Section nav -->
        <nav class="sidebar-nav" aria-label="Navigation">
          <a href="/" class:list={['sidebar-nav-link', { active: currentPath === '/' }]}>Home</a>
          <a href="/education" class:list={['sidebar-nav-link', { active: currentPath.startsWith('/education') }]}>Education</a>
          <a href="/research" class:list={['sidebar-nav-link', { active: currentPath === '/research' }]}>Research</a>

          <a href="/whitepapers" class:list={['sidebar-nav-link', { active: !!activeArticle || currentPath.startsWith('/whitepapers') }]}>Whitepapers</a>

          <a href="/network" class:list={['sidebar-nav-link', { active: currentPath === '/network' }]}>Network</a>
          <a href="/publishing" class:list={['sidebar-nav-link', { active: currentPath === '/publishing' }]}>Publishing</a>
          <a href="/transparency" class:list={['sidebar-nav-link', { active: currentPath === '/transparency' }]}>Transparency</a>
          <a href="/about" class:list={['sidebar-nav-link', { active: currentPath === '/about' }]}>About</a>
          <a href="/contact" class:list={['sidebar-nav-link', { active: currentPath === '/contact' }]}>Contact</a>
        </nav>

        <!-- Newsletter signup -->
        <div class="sidebar-newsletter">
          <span class="sidebar-newsletter-label">Join The Institute Newsletter</span>
          <form class="sidebar-newsletter-form" id="sidebar-newsletter-form">
            <input type="email" class="sidebar-newsletter-input" placeholder="your@email.com" required aria-label="Email address" />
            <button type="submit" class="sidebar-newsletter-btn">Subscribe</button>
          </form>
          <p class="sidebar-newsletter-success" id="sidebar-newsletter-success" style="display:none;">Subscribed — thank you.</p>
        </div>

        <!-- Footer with theme toggle -->
        <div class="sidebar-footer">
          <div class="sidebar-footer-row">
            <a href="https://sohma.house" target="_blank" rel="noopener noreferrer" class="sidebar-footer-btn sidebar-home-link">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
              <span class="footer-btn-label">Portal Login</span>
            </a>
            <a href="https://www.linkedin.com/company/sohma-house" target="_blank" rel="noopener noreferrer" class="sidebar-footer-btn sidebar-icon-btn" aria-label="LinkedIn" title="LinkedIn">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
              <span class="footer-btn-label">LinkedIn</span>
            </a>
            <button class="sidebar-footer-btn theme-toggle" id="theme-toggle" type="button" aria-label="Toggle nightshift mode" title="Toggle nightshift mode">
              <svg class="theme-icon-sun" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
              <svg class="theme-icon-moon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
              <span class="footer-btn-label">Night Mode</span>
            </button>
          </div>
        </div>
      </div>
      <div class="resize-handle resize-handle-left" id="resize-left"></div>
    </aside>

    <!-- READING PROGRESS -->
    <div class="reading-progress" id="reading-progress" aria-hidden="true">
      <div class="reading-progress-h" id="reading-progress-h"></div>
      <div class="reading-progress-v" id="reading-progress-v"></div>
    </div>

    <!-- MAIN CONTENT -->
    <main class="portal-main" id="portal-main">
      {toc && toc.length > 0 && (
        <div class="mobile-toc" id="mobile-toc">
          <button class="mobile-toc-toggle" id="mobile-toc-toggle" type="button" aria-expanded="false">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="8" y1="6" x2="21" y2="6" />
              <line x1="8" y1="12" x2="21" y2="12" />
              <line x1="8" y1="18" x2="21" y2="18" />
              <line x1="3" y1="6" x2="3.01" y2="6" />
              <line x1="3" y1="12" x2="3.01" y2="12" />
              <line x1="3" y1="18" x2="3.01" y2="18" />
            </svg>
            <span>On this page</span>
            <svg class="mobile-toc-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9" />
            </svg>
          </button>
          <nav class="mobile-toc-list" id="mobile-toc-list" aria-label="Table of contents">
            <ul>
              {toc.map(item => (
                <li class:list={[`mobile-toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="mobile-toc-link">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
          <div class="mobile-toc-dots">
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
            <span class="mobile-toc-dot"></span>
          </div>
        </div>
      )}
      <slot />
    </main>

    <!-- RIGHT SIDEBAR — On this page (TOC) -->
    {toc && toc.length > 0 && (
      <aside class="portal-sidebar-right" id="portal-toc">
        <div class="resize-handle resize-handle-right" id="resize-right"></div>
        <div class="toc-inner">
          <nav aria-label="Table of contents">
            <ul class="toc-list">
              {toc.map(item => (
                <li class:list={[`toc-level-${item.level}`]}>
                  <a href={`#${item.id}`} class="toc-link" data-toc-id={item.id}>
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
          <div class="toc-actions" id="toc-actions">
            <button class="wp-action-btn" data-action="share" type="button" title="Copy article as formatted text">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              <span>Copy</span>
            </button>
            <button class="wp-action-btn" data-action="cite" type="button" title="Copy formatted citation (APA, Harvard, BibTeX)">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V20c0 1 0 1 1 1z"/><path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3c0 1 0 1 1 1z"/></svg>
              <span>Cite</span>
            </button>
            <button class="wp-action-btn" data-action="pdf" type="button" title="Download as PDF">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
              <span>PDF</span>
            </button>
          </div>
        </div>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  /* ===== LAYOUT SHELL ===== */
  :global(html),
  :global(body) {
    background: var(--bg-base);
  }

  .portal-layout {
    display: flex;
    min-height: 100vh;
    background: var(--bg-base);
    color: var(--text-heading);
  }

  /* ===== MOBILE HEADER ===== */
  .portal-mobile-header {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 56px;
    background: var(--bg-surface);
    border-bottom: 1px solid var(--border-medium);
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    gap: 12px;
  }

  .sidebar-toggle {
    background: none;
    border: none;
    color: var(--accent);
    order: 1;
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .mobile-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    text-decoration: none;
  }

  .mobile-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 10px;
    font-weight: 900;
    letter-spacing: 0.12em;
    color: var(--accent-darker);
    -webkit-text-stroke: 0.4px var(--accent-darker);
  }

  .mobile-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .mobile-logo :global(svg) {
    height: 16px;
    width: auto;
  }

  .mobile-logo :global(svg path),
  .mobile-logo :global(svg *) {
    fill: var(--accent);
  }

  .mobile-institute {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-faint);
    line-height: 1;
    margin-bottom: -1px;
  }

  /* ===== LEFT SIDEBAR — Articles ===== */
  .portal-sidebar-left {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 260px;
    background: var(--bg-sidebar);
    border-right: 1px solid var(--border-light);
    z-index: 100;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--scrollbar-thumb) transparent;
  }

  .portal-sidebar-left::-webkit-scrollbar {
    width: 4px;
  }

  .portal-sidebar-left::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb);
    border-radius: 2px;
  }

  .sidebar-close {
    display: none;
    position: absolute;
    top: 14px;
    right: 16px;
    z-index: 10;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 4px;
    align-items: center;
    justify-content: center;
  }

  .sidebar-inner {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    padding: 24px 0;
  }

  /* Brand */
  .sidebar-brand {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding: 0 20px 20px;
    border-bottom: 1px solid var(--border-medium);
    margin-bottom: 20px;
  }

  .sidebar-brand-top {
    display: flex;
    align-items: flex-end;
    gap: 2px;
  }

  .sidebar-subtitle {
    font-family: 'Manrope', sans-serif;
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--text-link);
  }

  .sidebar-logo {
    display: flex;
    align-items: flex-end;
    height: 16px;
    flex-shrink: 0;
  }

  .sidebar-logo :global(svg) {
    height: 18px;
    width: auto;
    fill: var(--text-heading);
  }

  .sidebar-logo :global(svg path),
  .sidebar-logo :global(svg *) {
    fill: var(--text-heading);
  }

  .sidebar-title {
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-heading);
    line-height: 1;
    margin-bottom: -1px;
    text-decoration: none;
    transition: color 0.2s;
    white-space: nowrap;
  }

  .sidebar-title:hover {
    color: var(--text-link);
  }

  /* Section nav */
  .sidebar-nav {
    margin-bottom: 24px;
  }

  .sidebar-nav-link {
    display: block;
    font-family: 'Cormorant Garamond', serif;
    font-size: 25px;
    font-weight: 400;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 10px 20px;
    transition: color 0.15s, background 0.15s;
  }

  .sidebar-nav-link:hover {
    color: var(--text-heading);
    background: var(--bg-card);
  }

  .sidebar-nav-link.active {
    color: var(--accent-dark);
    background: var(--accent-active-bg);
    border-left: 3px solid var(--accent-dark);
    padding-left: 17px;
  }

  /* Dropdown */
  .sidebar-dropdown-title {
    color: inherit;
    text-decoration: none;
    font: inherit;
  }

  .sidebar-dropdown {
    position: relative;
  }

  .sidebar-dropdown-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
  }

  .sidebar-dropdown-toggle-link {
    display: block;
    cursor: pointer;
  }
  .sidebar-dropdown-toggle-link.active {
    color: var(--text-heading);
  }

  .sidebar-dropdown-chevron {
    color: var(--text-tertiary);
    flex-shrink: 0;
    transition: transform 0.2s;
  }

  .sidebar-dropdown.open .sidebar-dropdown-chevron {
    transform: rotate(180deg);
  }

  .sidebar-dropdown-items {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease;
    padding-top: 0;
    padding-bottom: 0;
  }

  .sidebar-dropdown.open .sidebar-dropdown-items {
    padding-top: 8px;
    padding-bottom: 12px;
  }

  .sidebar-dropdown.open .sidebar-dropdown-items {
    max-height: 400px;
  }

  .sidebar-sub-link {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: var(--text-link);
    text-decoration: none;
    padding: 6px 20px 6px 32px;
    transition: color 0.15s, background 0.15s;
  }

  .sidebar-sub-link:hover {
    color: var(--text-heading);
    background: var(--bg-card);
  }

  .sidebar-sub-link.active {
    color: var(--text-heading);
    font-weight: 600;
  }

  /* Sidebar newsletter */
  .sidebar-newsletter {
    margin-top: auto;
    padding: 16px 20px;
    border-top: 1px solid var(--border-medium);
    background: rgba(0, 0, 0, 0.025);
  }

  :global([data-theme="dark"]) .sidebar-newsletter {
    background: rgba(255, 255, 255, 0.025);
  }

  .sidebar-newsletter-label {
    display: block;
    font-family: 'Manrope', sans-serif;
    font-size: 0.5625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: 10px;
  }

  .sidebar-newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .sidebar-newsletter-input {
    font-family: 'Manrope', sans-serif;
    font-size: 0.6875rem;
    padding: 6px 10px;
    border: 1px solid var(--border-light);
    border-radius: 4px;
    background: var(--bg-card);
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.2s;
  }

  .sidebar-newsletter-input:focus {
    border-color: var(--accent);
  }

  .sidebar-newsletter-input::placeholder {
    color: var(--text-tertiary);
  }

  .sidebar-newsletter-btn {
    font-family: 'Manrope', sans-serif;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 6px 12px;
    border: 1px solid var(--border-light);
    border-radius: 4px;
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    transition: color 0.2s, background 0.2s, border-color 0.2s;
  }

  .sidebar-newsletter-btn:hover {
    background: var(--accent-dark);
    border-color: var(--accent-dark);
    color: #fff;
  }

  .sidebar-newsletter-success {
    font-size: 0.6875rem;
    color: var(--accent);
    margin: 4px 0 0;
  }

  /* Sidebar footer */
  .sidebar-footer {
    margin-top: auto;
    padding: 20px;
    border-top: 1px solid var(--border-medium);
  }

  .sidebar-back {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Manrope', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .sidebar-back:hover {
    color: var(--accent);
  }

  .sidebar-footer-row {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  /* Shared base for all three footer buttons */
  .sidebar-footer-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    height: 32px;
    min-width: 32px;
    border-radius: 6px;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    color: var(--text-tertiary);
    cursor: pointer;
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    transition: flex 0.3s ease, color 0.2s, background 0.2s, border-color 0.2s;
  }

  .sidebar-footer-btn:hover {
    color: var(--text-heading);
    background: var(--bg-card-hover);
    border-color: var(--border-medium);
  }

  .sidebar-footer-btn svg {
    flex-shrink: 0;
  }

  .footer-btn-label {
    font-family: 'Manrope', sans-serif;
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    overflow: hidden;
    transition: width 0.3s ease, opacity 0.2s ease;
  }

  /* Portal Login fills remaining space by default */
  .sidebar-home-link {
    flex: 1 1 auto;
    padding: 0 10px;
  }

  /* LinkedIn and theme toggle are icon-only by default */
  .sidebar-icon-btn,
  .theme-toggle {
    flex: 0 0 32px;
    padding: 0;
    gap: 0;
  }

  .sidebar-icon-btn .footer-btn-label,
  .theme-toggle .footer-btn-label {
    width: 0;
    opacity: 0;
  }

  /* On hover: icon buttons expand, portal shrinks */
  .sidebar-footer-row:has(.sidebar-icon-btn:hover) .sidebar-home-link,
  .sidebar-footer-row:has(.theme-toggle:hover) .sidebar-home-link {
    flex: 0 0 32px;
    padding: 0;
    gap: 0;
  }

  .sidebar-footer-row:has(.sidebar-icon-btn:hover) .sidebar-home-link .footer-btn-label,
  .sidebar-footer-row:has(.theme-toggle:hover) .sidebar-home-link .footer-btn-label {
    width: 0;
    opacity: 0;
  }

  .sidebar-icon-btn:hover,
  .theme-toggle:hover {
    flex: 1 1 auto;
    padding: 0 10px;
    gap: 6px;
  }

  .sidebar-icon-btn:hover .footer-btn-label,
  .theme-toggle:hover .footer-btn-label {
    width: auto;
    opacity: 1;
  }

  /* Show sun in dark mode, moon in light mode */
  .theme-icon-sun { display: none; }
  .theme-icon-moon { display: block; }
  :global([data-theme="dark"]) .theme-icon-sun { display: block; }
  :global([data-theme="dark"]) .theme-icon-moon { display: none; }

  /* Left sidebar overlay (mobile) */
  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
